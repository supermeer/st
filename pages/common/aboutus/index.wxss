page {
  background: #000;
  box-sizing: border-box;
  height: 100%;
  height: 100%;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.aboutus-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
}

.aboutus-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 0 32rpx;
}

.aboutus-item-switch {
  --td-switch-checked-color: var(--yellow-btn-color);
}

.aboutus-item {
  width: 100%;
  height: 96rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  border-radius: 24rpx;
  padding: 0 32rpx;
  color: #aaa;
}

.aboutus-item:active {
  background-color: #222;
}

.aboutus-header .aboutus-item-title {
  font-size: 24rpx;
  color: #fff;
  margin-top: 30rpx;
  font-weight: bold;
}

.aboutus-item-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-left: 32rpx;
  background: transparent;
}

.aboutus-item-desc {
  font-size: 24rpx;
  color: #999;
  background: transparent;
  margin-left: auto !important;
}
.aboutus-item-arr {
  background: transparent;
}

.logoff-item {
  width: 100%;
  height: 96rpx;
  color: white;
  font-weight: bold;
  background-color: #FF4D4F;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  margin-top: auto;
  justify-content: center;
  border-radius: 24rpx;
}