<view class="aboutus-container">
  
  <custom-nav
    class="custom-nav"
    title=""
    showBack="{{true}}"
    showHome="{{false}}">
  </custom-nav>
  <view class="aboutus-content">
    <view wx:for="{{itemList}}" wx:key="index" class="{{item.header ? 'aboutus-header' : 'aboutus-item blur-glass'}}" bindtap="{{item.isGradientPicker ? 'onGradientPicker' : 'onClickCell'}}" data-url="{{item.url}}" data-index="{{index}}">
      <view class="aboutus-item-title">{{item.title}}</view>
      <view class="aboutus-item-desc">{{item.desc}}</view>
      <view wx:if="{{item.showDot}}" class="aboutus-item-dot" />
      <t-icon wx:if="{{item.url || item.isGradientPicker}}" class="aboutus-item-arr" name="chevron-right" size="18" color="#999" />
      <t-switch wx:if="{{item.isSwitch}}" class="aboutus-item-switch" value="{{item.switchOptions.checked}}" data-index="{{index}}" bindchange="onSwitchChange" />
    </view>
    <view class="logoff-item" bindtap="logoff">
      <view class="logoff-item-title">注销账号</view>
    </view>
  </view>
  
</view>

<logoff-dialog
  id="logoff-dialog"
  bindclose="closeLogoffDialog"
  bindconfirm="confirmLogoffDialog"
/>
<t-toast id="t-toast" />

 <model-sheet id="modelSheet" />
