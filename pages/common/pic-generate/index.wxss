/* pages/common/pic-generate/index.wxss */
.pic-generate-page {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background: #000;
}

/* 毛玻璃效果 */
.blur-glass {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

/* 可滚动内容区域 */
.scroll-content {
  position: relative;
  width: 100%;
  z-index: 1;
}

/* 页面内容 */
.page-content {
  padding: 32rpx;
}

/* 区块 */
.section {
  margin-bottom: 32rpx;
}

.section:last-child {
  margin-bottom: 0;
}

/* 区块标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 24rpx;
}

/* 风格横向滚动区域 */
.style-scroll {
  width: 100%;
  white-space: nowrap;
}

.style-list {
  display: inline-flex;
  gap: 16rpx;
  padding-right: 32rpx;
}

/* 风格卡片 */
.style-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.style-image-wrapper {
  position: relative;
  width: 156rpx;
  height: 208rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
  border: 3rpx solid transparent;
  transition: all 0.3s;
}

.style-item.active .style-image-wrapper {
  border-color: #7c5aff;
  box-shadow: 0 0 16rpx rgba(124, 90, 255, 0.6);
}

.style-image {
  width: 100%;
  height: 100%;
}

.style-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.3) 100%);
}

.style-name {
  font-size: 24rpx;
  color: #fff;
  text-align: center;
}

.style-item.active .style-name {
  color: #7c5aff;
  font-weight: bold;
}

/* 文字描述输入框 */
.description-wrapper {
  position: relative;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.description-input {
  width: 100%;
  min-height: 280rpx;
  font-size: 26rpx;
  color: #fff;
  line-height: 1.6;
  background: transparent;
}

.textarea-placeholder {
  color: rgba(255, 255, 255, 0.3);
  font-size: 24rpx;
  line-height: 1.6;
}

.char-count {
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* 优化提示词 */
.optimize-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-radius: 16rpx;
}

.optimize-label {
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
}

.optimize-switch {
  transform: scale(0.9);
}

/* 固定底部生成按钮 */
.generate-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  padding: 20rpx 32rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, transparent 100%);
}

.generate-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.generate-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

