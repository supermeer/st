/* pages/common/pic-generate/result.wxss */
.result-page {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background: #000;
  display: flex;
  flex-direction: column;
}

/* 毛玻璃效果 */
.blur-glass {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

/* ========== 生成中状态 ========== */
.generating-container {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
}

.card-container {
  width: 100%;
  max-width: 580rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.progress-card {
  width: 100%;
  min-height: 680rpx;
  border-radius: 32rpx;
  padding: 80rpx 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, rgba(58, 52, 114, 0.3) 0%, rgba(44, 40, 80, 0.3) 100%);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

/* 加载动画 */
.loading-circle {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.circle-inner {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 100%);
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(0.8);
    opacity: 1;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.8;
  }
}

/* 进度文字 */
.progress-text {
  display: flex;
  align-items: baseline;
  margin-bottom: 24rpx;
}

.status-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-right: 16rpx;
}

.percent-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #667eea;
}

/* 预估时间 */
.estimated-time {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-top: 16rpx;
}

/* 底部提示 */
.bottom-tip {
  margin-top: 48rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
  text-align: center;
}

/* ========== 生成成功状态 ========== */
.success-container {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* 头像展示区域 */
.avatar-section {
  display: flex;
  justify-content: center;
}

.avatar-card {
  height: 240rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.05);
}

.avatar-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  cursor: pointer;
  transition: all 0.3s;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
}

.avatar-wrapper:active {
  transform: scale(0.95);
}

.avatar-image {
  width: 100%;
  height: 100%;
  display: block;
}

.avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s;
}

.avatar-wrapper:active .avatar-overlay {
  opacity: 1;
}

.avatar-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.avatar-text {
  font-size: 24rpx;
  color: #fff;
  font-weight: 500;
}

.avatar-tip {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 图片展示区域 */
.image-container {
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.image-card {
  /* 宽度和高度由 JS 动态计算 */
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.5);
  background: rgba(255, 255, 255, 0.05);
}

.generated-image {
  width: 100%;
  height: 100%;
  display: block;
}

/* 底部操作区域 */
.action-footer {
  position: relative;
  padding: 20rpx 32rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.9) 0%, rgba(0, 0, 0, 0.6) 100%);
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  align-items: center;
  width: 100%;
  max-width: 600rpx;
  margin: 0 auto;
}

.action-btn {
  flex: 1;
  height: 96rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s;
  padding: 0 32rpx;
  white-space: nowrap;
}

.action-btn.secondary {
  background: rgba(255, 255, 255, 0.1);
  color: #fff;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.action-btn.secondary:active {
  background: rgba(255, 255, 255, 0.15);
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.action-btn.primary:active {
  opacity: 0.9;
  transform: scale(0.98);
}

/* ========== 生成失败状态 ========== */
.failed-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
}

.failed-card {
  width: 100%;
  max-width: 580rpx;
  min-height: 580rpx;
  border-radius: 32rpx;
  padding: 80rpx 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, rgba(114, 52, 52, 0.3) 0%, rgba(80, 40, 40, 0.3) 100%);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

/* 失败图标 */
.failed-icon {
  margin-bottom: 48rpx;
}

.icon-circle {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(234, 102, 102, 0.2) 0%, rgba(162, 75, 75, 0.2) 100%);
  border: 4rpx solid rgba(234, 102, 102, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  animation: shake 0.5s ease-in-out;
}

.icon-text {
  font-size: 88rpx;
  color: #ea6666;
  font-weight: bold;
  line-height: 1;
}

@keyframes shake {
  0%, 100% {
    transform: translateX(0);
  }
  25% {
    transform: translateX(-10rpx);
  }
  75% {
    transform: translateX(10rpx);
  }
}

/* 失败提示文字 */
.failed-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.failed-text .status-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
}

.error-message {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  line-height: 1.5;
  max-width: 400rpx;
}

