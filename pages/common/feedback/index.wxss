.feedback-page {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background: #000;
}

/* 固定背景图 */
.page-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 0;
  object-fit: cover;
}

/* 可滚动内容区域 */
.scroll-content {
  position: relative;
  width: 100%;
  height: 100vh;
  z-index: 1;
}
/* 反馈表单 */ 
.feedback-form {
  padding: 32rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 24rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  color: #fff;
}

.form-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 24rpx;
}

/* 文本域 */
.form-textarea {
  min-height: 300rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #fff;
  line-height: 1.6;
  width: 100%;
  box-sizing: border-box;
}

.input-placeholder {
  color: rgba(255, 255, 255, 0.5);
}

.textarea-counter {
  text-align: right;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-top: 12rpx;
}

/* 提交按钮容器 */
.submit-container {
  position: fixed;
  left: 32rpx;
  right: 32rpx;
  z-index: 10;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  text-align: center;
  background: linear-gradient(135deg, #8B5CF6 0%, #A78BFA 100%);
  box-shadow: 0 8rpx 24rpx rgba(139, 92, 246, 0.4);
  border: none;
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.submit-btn:disabled {
  opacity: 0.6;
}

.submit-btn::after {
  border: none;
}

