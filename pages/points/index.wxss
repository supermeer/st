
page {
  background: #050010;
  background: linear-gradient(180deg, #111827 0%, #050010 40%, #050010 100%);
  color: #fff;
  height: 100%;
}

.points-page {
  min-height: 100vh;
  padding: 32rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.points-content {
  flex: 1;
  overflow-y: auto;
  padding-bottom: 32rpx;
}

.points-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 24rpx 0;
}

.points-header-title {
  font-size: 32rpx;
  font-weight: 600;
}

.points-header-link {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #e5e7eb;
}

.points-header-link text {
  margin-right: 4rpx;
}

.points-summary-card {
  background: #111827;
  border-radius: 24rpx;
  padding: 32rpx 28rpx;
  display: flex;
  align-items: center;
  margin: 24rpx 0;
}

.points-summary-left {
  display: flex;
  align-items: flex-start;
}

.points-summary-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 6rpx;
}

.points-summary-info {
  display: flex;
  flex-direction: column;
}

.points-summary-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #a855f7;
}

.points-summary-expire {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #9ca3af;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  margin: 24rpx 0;
}

.point-item {
  background: #111827;
  border-radius: 24rpx;
  padding: 24rpx 28rpx;
  margin-bottom: 20rpx;
}

.point-item-header {
  display: flex;
  justify-content: space-between;
  font-weight: bold;
  color: #ddd;
  font-size: 28rpx;
}

.point-item-title {
  display: flex;
  align-items: center;
}

.point-item-title-tag {
  border-radius: 6rpx;
  padding: 6rpx 8rpx;
  margin-left: 8rpx;
  font-size: 22rpx;
}

.gn {
  background: rgb(223, 243, 223);
  color: rgb(8, 196, 8);
}

.rd {
  background: rgb(236, 199, 199);
  color: rgb(230, 72, 72);
}

.point-item-header-right {
  color: #a855f7;
  display: flex;
  font-weight: normal;
}

.point-item-desc {
  color: #bbb;
  margin-top: 12rpx;
}
.point-item-desc-white {
  color: #fff;
  font-weight: bold;
}

.plan-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-column-gap: 24rpx;
  grid-row-gap: 24rpx;
}

.plan-item {
  background: #f4f4ff;
  border-radius: 24rpx;
  padding: 24rpx 16rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #111827;
  aspect-ratio: 1;
}

.plan-item.active {
  background: #8b5cf6;
  color: #fff;
}

.plan-points {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.points-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}

.plan-points-num {
  color: var(--theme-color-purple);
  font-size: 28rpx;
}

.plan-item.active .plan-points-num {
  color: #fff;
}

.plan-price {
  margin-top: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.points-footer {
  padding-top: 24rpx;
  padding-bottom: env(safe-area-inset-bottom);
}

.points-tips {
  font-size: 22rpx;
  color: #d1d5db;
  margin-bottom: 32rpx;
}

.points-tip-line {
  margin-bottom: 8rpx;
}

.points-tip-em {
  color: #ef4444;
}

.recharge-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  background: linear-gradient(135deg, #7c5aff 0%, #a78bfa 50%, #8b5cf6 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 20rpx rgba(124, 90, 255, 0.6);
}

.agreement {
  margin-top: 24rpx;
  font-size: 22rpx;
  color: #9ca3af;
  text-align: center;
}

.agreement-link {
  color: #e5e7eb;
}

