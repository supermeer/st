<view class="points-page">
  <custom-nav
    class="points-custom-nav"
    show-back="{{true}}"
    show-left-logo="{{false}}"
    show-home="{{false}}"
    transparent="{{true}}"
  >
    <text slot="center">我的积分</text>
  </custom-nav>
  <view class="points-content">
    <view class="points-header">
      <view class="points-header-title">我的积分</view>
      <view class="points-header-link" bindtap="goDetail">
        <text>收支明细</text>
        <t-icon name="chevron-right" size="20" />
      </view>
    </view>

    <view class="points-summary-card">
      <view class="points-summary-left">
        <t-image class="points-summary-icon" src="/static/vip/score.png" mode="aspectFit" />
        <view class="points-summary-info">
          <view class="points-summary-value">{{(pointInfo.pointBalance || 0) + (pointInfo.dailyFreeBalance || 0)}}</view>
          <!-- <view class="points-summary-expire">今日赠送积分剩余：{{pointInfo.dailyFreeBalance || 0}}</view> -->
        </view>
      </view>
    </view>

    <view class="section-title">积分获取方式</view>

    <view class="point-items">
      <view class="point-item" bindtap="pointCharge">
        <view class="point-item-header">
          充值积分
          <view class="point-item-header-right">去充值<t-icon name="chevron-right" size="20" /></view>
        </view>
        <view class="point-item-desc">
          积分充值，超划算~
        </view>
      </view>
      <view class="point-item" bindtap="vipCharge">
        <view class="point-item-header">
          开通会员
          <view class="point-item-header-right">去开通<t-icon name="chevron-right" size="20" /></view>
        </view>
        <view class="point-item-desc">
          开会员直接<text class="point-item-desc-white">送积分</text>！还有<text class="point-item-desc-white">一堆福利</text>等你来薅！
        </view>
      </view>
      <view class="point-item">
        <view class="point-item-header">
          <view class="point-item-title">邀请好友赚积分<view class="point-item-title-tag gn">不限次</view></view>
          <view class="point-item-header-right">去邀请<t-icon name="chevron-right" size="20" /></view>
        </view>
        <view class="point-item-desc">
          积分充值，超划算~
        </view>
      </view>
      <view class="point-item">
        <view class="point-item-header">
          <view class="point-item-title">创作者激励活动<view class="point-item-title-tag rd">超火热</view></view>
          <view class="point-item-header-right">查看活动<t-icon name="chevron-right" size="20" /></view>
        </view>
        <view class="point-item-desc">
          积分充值，超划算~
        </view>
      </view>
    </view>

