.record-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.nav-container {
  background-color: transparent;
}

.content-container {
  flex: 1;
  width: 100%;
  overflow: hidden;
}

.record-list-refresh {
  height: 100%;
}

.record-list-container {
  height: 100%;
  padding: 32rpx;
  box-sizing: border-box;
}

.record-list {
  width: 100%;
}

.record-item {
  margin-top: 24rpx;
  padding: 28rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 32rpx;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.8);
  font-weight: bold;
}

.record-time {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.4);
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
