.times-detail-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.nav-container {
  background-color: transparent;
}

.content-container {
  flex: 1;
  width: 100%;
  overflow: hidden;
}

.times-list-refresh {
  height: 100%;
  box-sizing: border-box;
}

.times-list {
  padding: 32rpx;
  width: 100%;
  box-sizing: border-box;
}

.times-item {
  margin-top: 20rpx;
  padding: 24rpx 32rpx;
  box-shadow: 0 2rpx 10rpx 0 rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border-radius: 24rpx;
}

.left-content {
  display: flex;
  flex-direction: column;
}
.left-content-title {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.8);
  letter-spacing: 0.8rpx;
}
.left-content-time {
  font-size: 20rpx;
  color: rgba(0, 0, 0, 0.6);
  letter-spacing: 0.8rpx;
  margin-top: 20rpx;
  font-weight: bold;
}
.right-content {
  letter-spacing: 0.8rpx;
  margin-left: auto;
  display: flex;
  align-items: flex-end;
  font-size: 20rpx;
  color: rgba(0, 0, 0, 0.6);
}

.right-content-remain {
  font-weight: bold;
  letter-spacing: 0.8rpx;
  font-size: 32rpx;
  color: var(--theme-color);
  margin-left: 10rpx;
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
} 