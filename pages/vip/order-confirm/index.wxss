/* 所有元素 letter-spacing */
view {
  letter-spacing: 0.8rpx;
}

.order-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.nav-container {
  background: transparent;
}

.content-container {
  flex: 1;
  width: 100%;
  padding: 0 32rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  padding-bottom: calc(env(safe-area-inset-bottom) + 16rpx);
}

/* 商品信息卡片 */
.product-card {
  width: 100%;
  padding: 36rpx 32rpx 32rpx 36rpx;
  box-sizing: border-box;
  margin-top: 16rpx;
  color: #FFFFFF;
  position: relative;
}

.product-info {
  font-size: 28rpx;
  font-weight: bold;
  height: 40rpx;
  line-height: 40rpx;
}


.product-price-line {
  width: 100%;
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  height: 44rpx;
  line-height: 44rpx;
  display: flex;
  align-items: center;
}
.product-price {
  font-weight: bold;
  height: 44rpx;
  line-height: 44rpx;
  display: flex;
  margin-left: auto;
  font-size: 24rpx;
}

.price-value {
  font-size: 36rpx;
  font-weight: bold;
  margin-left: 16rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.original-price {
  font-size: 20rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-decoration: line-through;
  text-align: right;
  margin-top: 4rpx;
  color: #aaa;
}

.bottom-line {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 16rpx;
}

.vip-icon {
  width: 50rpx;
  height: 42rpx;
}

.quantity-control {
  display: flex;
  align-items: center;
}

.quantity-btn {
  width: 42rpx;
  height: 36rpx;
  line-height: 36rpx;
  display: flex;
  justify-content: center;
  font-size: 28rpx;
  background: rgba(216, 216, 216, 0.4);
  color: rgba(39, 37, 54, 1);
  font-weight: bold;
}
.quantity-btn-minus{
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
}
.quantity-btn-plus{
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}
.quantity-btn.disabled {
  color: rgba(39, 37, 54, 0.4);
}

.quantity-value {
  height: 36rpx;
  line-height: 36rpx;
  background: rgba(216, 216, 216, 0.4);
  justify-content: center;
  color: rgba(39, 37, 54, 1);
  font-size: 20rpx;
  margin: 0 6rpx;
  padding: 0 18rpx;
}

/* 价格明细卡片 */
.price-card {
  width: 100%;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-sizing: border-box;
  margin-top: 24rpx;
  box-shadow: 0px 2px 6px 2px rgba(23, 77, 255, 0.08);
}

.price-info {
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(0, 0, 0, 0.8);
  height: 40rpx;
  line-height: 40rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: rgba(0, 0, 0, 0.6);
  margin-top: 16rpx;
}

.price-item-label {
  font-size: 28rpx;
  height: 44rpx;
  line-height: 44rpx;
  color: rgba(0, 0, 0, 0.8);
}

.price-item-value {
  font-size: 36rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: var(--theme-color);
  font-weight: bold;
}

.price-item-value-discount {
  font-size: 24rpx;
}

.price-item.total {
  font-weight: bold;
  border-top: 1rpx solid rgba(216, 216, 216, 0.6);
  margin-top: 16rpx;
  padding-top: 16rpx;
}

/* 下单按钮 */
.order-button {
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  text-align: center;
  background: linear-gradient(100deg, #63B4FF 16%, #174DFF 89%);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 24rpx;
  margin-top: auto;
}