.packages-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.nav-container {
  background-color: transparent;
}

.content-container {
  flex: 1;
  width: 100%;
  padding: 0 32rpx;
  box-sizing: border-box;
  overflow-y: auto;
}

/* VIP 卡片样式 */
.vip-card {
  width: 100%;
  height: 180rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  background-position: center;
  margin-top: 32rpx;
  padding: 36rpx 46rpx 26rpx;
  box-sizing: border-box;
  position: relative;
}

.vip-card-header {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}
.vip-card-header-icon {
  width: 36rpx;
  height: 32rpx;
  margin-right: 16rpx;
}
.vip-card-header-text {
  font-size: 32rpx;
  color: #fff;
}
.vip-card-header-text-vip {
  font-weight: bold;
}
.vip-card-header-remain {
  font-size: 26rpx;
  font-weight: bold;
  color: #fff;
  margin-left: 46rpx;
  display: flex;
  align-items: center;
}
.vip-card-header-remain-time {
  font-size: 48rpx;
  padding: 0 8rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-weight: bold;
  background: linear-gradient(180deg, #FF5D4B 0%, #FF53B3 98%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}
.vip-card-bottom {
  font-size: 24rpx;
  position: absolute;
  bottom: 12rpx;
  left: 46rpx;
  right: 32rpx;
  display: flex;
  align-items: center;
  letter-spacing: 0.8rpx;
  color: #fff;
  height: 72rpx;
}
.deadline-time {
  color: #fff;
}
.deadline-time-countdown {
  color: #ffce5e;
  margin-left: 20rpx;
}

.times-detail {
  color: #fff;
  padding: 20rpx;
}

.vip-renew {
  font-size: 24rpx;
  font-weight: bold;
  color: #fff;
  position: absolute;
  top: 0;
  right: 0;
  height: 48rpx;
  line-height: 48rpx;
  padding: 4rpx 16rpx;
  background: linear-gradient(180deg, #FF5D4B 0%, #FF53B3 98%);
  border-bottom-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(0, 0, 0, 0.8);
  margin-top: 30rpx;
  margin-bottom: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding-left: 6rpx;
}

/* 套餐列表 */
.package-list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 40rpx;
}

.package-item {
  width: 336rpx;
  height: 212rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 38rpx 0 18rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  box-shadow: 0 2rpx 12rpx 0 rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
  margin-right: 14rpx;
  margin-bottom: 14rpx;

}

.package-item:nth-of-type(2n) {
  margin-right: 0;
}

.package-item-active {
  background: linear-gradient(143deg, rgba(99, 180, 255, 0.8) 7%, rgba(23, 77, 255, 0.8) 95%);
  color: #fff;
  border: 1px solid #174DFF;
}

.package-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.package-price {
  font-size: 48rpx;
  font-weight: bold;
  margin-top: 8rpx;
  color: #333;
  display: flex;
  align-items: flex-end;
}
.price-unit {
  font-size: 32rpx;
  padding-bottom: 6rpx;
  margin-right: 10rpx;
}

.package-item-active .package-name {
  color: #fff;
}
.package-item-active .package-price {
  color: #fff;
}
.package-item-active .package-original {
  color: rgba(255, 255, 255, 0.4);
}

.package-original {
  font-size: 24rpx;
  color: rgba(51, 51, 51, 0.4);
  text-decoration: line-through;
  margin-top: 16rpx;
  height: 18rpx;
  line-height: 18rpx;
}

.package-tag {
  position: absolute;
  top: 0;
  left: 0;
  background: linear-gradient(90deg, #FF52B5 0%, #FF5784 57%, #FF5E42 99%);
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: bold;
  padding: 4rpx 20rpx;
  border-top-left-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
}

.benefit-list {
  margin-bottom: 40rpx;
}

.benefit-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  background-color: #FFFFFF;
  padding: 24rpx 32rpx;
  border-radius: 24rpx;
}
.benefit-icon {
  width: 34rpx;
  height: 34rpx;
  padding-top: 4rpx;
}

.benefit-content {
  margin-left: 24rpx;
}

.benefit-name {
  font-size: 32rpx;
  color: #333;
  height: 40rpx;
  line-height: 40rpx;
  letter-spacing: 0.8rpx;
}

.benefit-highlight {
  color: #174EFF;
  font-weight: bold;
  font-size: 36rpx;
  background: linear-gradient(180deg, #75B2FF 0%, #4370FF 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-fill-color: transparent;
  z-index: 1;
}

.benefit-desc {
  font-size: 24rpx;
  color: rgba(51, 51, 51, 0.4);
  margin-top: 16rpx;
  letter-spacing: 0.8px;
  height: 32rpx;
  line-height: 32rpx;
}

.rules-content {
}

.rule-item {
  font-size: 24rpx;
  line-height: 40rpx;
  height: 40rpx;
  letter-spacing: 0.8rpx;
  color: rgba(0, 0, 0, 0.4);
}

/* 更多特权提示 */
.more-privilege {
  text-align: center;
  font-size: 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: var(--theme-color);
  letter-spacing: 0.8rpx;
  margin-top: 54rpx;
}

/* 购买按钮 */
.purchase-button {
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  text-align: center;
  background: linear-gradient(100deg, #63B4FF 16%, #174DFF 89%);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 24rpx;
  margin-top: 12rpx;
}

/* 协议 */
.agreement {
  font-size: 20rpx;
  color: #8C8E90;
  text-align: center;
  margin-bottom: 40rpx;
  letter-spacing: 0.8rpx;
  margin-top: 12rpx;
}

.agreement-link {
  color: #141A1E;
}

.agreement-subtitle {
  font-size: 20rpx;
  margin-top: 4rpx;
} 