/* pages/vip/packages/index.wxss */
.packages-page {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background: #000;
}

/* 固定背景图 */
.page-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 0;
  object-fit: cover;
}

/* 可滚动内容区域 */
.scroll-content {
  position: relative;
  width: 100%;
  height: 100vh;
  z-index: 1;
  padding: 40rpx 32rpx;
  box-sizing: border-box;
}

/* 会员权益卡片 */
.benefits-card {
  margin-bottom: 32rpx;
  padding: 40rpx 48rpx;
  border-radius: 40rpx;
  color: #fff;
  background: linear-gradient(135deg, rgba(211, 211, 211, 0.4) 0%, rgba(0, 0, 0, 0.4) 100%);
}

.benefits-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 24rpx;
  line-height: 1.4;
}

.benefit-item {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.6;
  display: inline-block;
  margin-right: 16rpx;
}

/* 功能对比表格 */
.comparison-table {
  margin-bottom: 32rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  color: #fff;
  position: relative;
}

.member-bg {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  bottom: 32rpx;
  border-radius: 24rpx;
  width: 120rpx;
  z-index: -1;
  background: #fff;
}

.table-header {
  display: flex;
  align-items: center;
  margin-bottom: 60rpx;
}

.header-cell {
  /* flex: 1; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.header-label {
  align-items: flex-start;
  flex: 1;
}

.header-current {
  width: 100rpx;
  position: relative;
  align-items: center;
}

.user-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-bottom: 8rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  display: block;
}

.header-member {
  width: 120rpx;
  border-radius: 12rpx;
  padding: 12rpx 0;
  font-weight: bold;
}

.header-member .header-text {
  color: #000;
}

.header-text {
  font-size: 24rpx;
  color: #fff;
}

.table-body {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.table-row {
  display: flex;
  align-items: center;
  padding-bottom: 24rpx;
}

.table-cell {
  font-size: 28rpx;
  color: #fff;
  text-align: center;
}

.cell-label {
  text-align: left;
  color: rgba(255, 255, 255, 0.8);
  flex: 1;
}

.cell-value {
  color: #fff;
  width: 100rpx;
}

.cell-member {
  color: #000;
  font-weight: bold;
  width: 120rpx;
}

.bottom-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 42rpx 32rpx 32rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 42rpx 42rpx 0 0;
}

/* 套餐选择 */
.package-selection {
  margin-bottom: 32rpx;
  width: 100%;
  white-space: nowrap;
  overflow-x: auto;
  gap: 16rpx;
}

.package-card {
  display: inline-flex;
  background-color: rgba(245, 245, 245, 1);
  border-radius: 24rpx;
  padding: 32rpx 20rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  min-height: 160rpx;
  box-sizing: border-box;
  width: 30%;
  margin-right: 16rpx;
}

.package-card-selected {
  background-color: #fff;
  border: 2rpx solid #6c5ce7;
}

.package-price-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #000;
  margin-bottom: 8rpx;
}

.package-card-selected .package-price-text {
  color: #000;
}

.package-name-text {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.6);
}

.package-card-selected .package-name-text {
  color: rgba(0, 0, 0, 0.6);
}

/* 购买按钮 */
.purchase-button {
  width: 100%;
  height: 92rpx;
  background-color: #000;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.purchase-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.purchase-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

/* 协议文本 */
.agreement-text {
  font-size: 24rpx;
  color: #000;
  text-align: center;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

.agreement-link {
  color: #000;
  text-decoration: underline;
} 