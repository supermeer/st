page{
  width: 100%;
}
.blog-container {
  background: rgba(23, 77, 255, 0.12);
  height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.page-content{
  padding: 12rpx 32rpx 0;
}

.form-container {
  height: calc(100vh - env(safe-area-inset-top) - 44px - 260rpx - env(safe-area-inset-bottom));
  overflow-y: auto;
}

.section {
  background-color: #fff;
  border-radius: 24rpx;
  margin-bottom: 16rpx;
  padding: 26rpx 32rpx;
  width: 100%;
  box-sizing: border-box;
}

