/* pages/role/role-detail/index.wxss */
page {
  background-color: #000;
}
.role-detail-page {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

/* 固定背景图 */
.page-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 0;
  object-fit: cover;
}

/* 可滚动内容区域 */
.scroll-content {
  position: relative;
  width: 100%;
  height: 100vh;
  z-index: 1;
}

/* 毛玻璃信息卡片 */
.info-card {
  margin: 100rpx 32rpx 24rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  color: #fff;
}

.chat-setting {
  font-size: 24rpx;
  position: relative;
  padding-bottom: 16rpx;
  margin-left: auto;
  color: var(--yellow-btn-color);
  display: flex;
  align-items: center;
}

.chat-setting-icon {
  color: var(--yellow-btn-color);
}

.role-name-section {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.role-name {
  font-size: 48rpx;
  font-weight: bold;
  margin-right: 16rpx;
}

.role-gender {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.role-gender.male {
  color: #4A9EFF; /* 蓝色 */
}

.role-gender.female {
  color: #FF69B4; /* 粉色 */
}

.role-tags {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.tag {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.95);
  /* padding: 8rpx 20rpx; */
  /* background-color: rgba(255, 255, 255, 0.15);
  border-radius: 30rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3); */
}

.role-hot-container {
  padding-top: 12rpx;
  text-align: center;
  display: inline-block;
}

/* 详情内容区域 */
.detail-content {
  border-radius: 24rpx 24rpx 0 0;
  margin: 0 32rpx;
  padding: 32rpx;
}

/* 标签页 */
.tabs {
  display: flex;
  gap: 48rpx;
  padding: 16rpx 16rpx 0;
  border-radius: 16rpx;
}

.tab {
  font-size: 32rpx;
  color: #fff;
  position: relative;
  padding-bottom: 16rpx;
}

.tab.active {
  color: var(--magic-color);
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0rpx;
  left: 0;
  right: 0;
  height: 4rpx;
  background-color: var(--magic-color);
  border-radius: 2rpx;
}

/* 内容区域 */
.content-section {
  /* padding-top: 16rpx; */
}

.section-content {
  font-size: 28rpx;
  color: #fff;
  line-height: 1.8;
  text-align: justify;
  letter-spacing: 0.8rpx;
  padding: 12rpx;
  border-radius: 16rpx;
  position: relative;
  padding-bottom: 56rpx; /* 给右下角按钮留出空间 */
}

.fold-toggle {
  position: absolute;
  right: 16rpx;
  bottom: 12rpx;
  font-size: 24rpx;
  color: #ddd;
  padding: 8rpx 16rpx;
}
.section-title-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 70rpx;
  font-size: 24rpx;
  padding: 32rpx 0 20rpx;
  /* padding-top: 16rpx; */
}
.section-title {
  font-size: 28rpx;
  font-weight: bold;
  padding-left: 24rpx;
  color: #fff;
  display: flex;
  align-items: center;
}

.section-title .t-icon {
  margin-left: 12rpx;
}
.section-desc {
  font-size: 24rpx;
  margin-left: auto;
}
.section-title-icon {
  color: #fff;
}

.like-blur-glass {
  border-color: rgba(255, 255, 255, 0.3);
  background: rgba(255, 255, 255, 0.1);
}

.plot-content {
  font-size: 28rpx;
  color: #fff;
  line-height: 2.5;
  text-align: justify;
  padding: 24rpx;
  border-radius: 16rpx;
}
.setting-block {
  border-radius: 16rpx;
  padding: 24rpx;
}
.setting-row {
  display: flex;
  gap: 24rpx;
}
.setting-item-inline {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 16rpx 0rpx;
}
.setting-item-title {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}
.setting-item-value {
  font-size: 28rpx;
  color: #fff;
  margin-top: 8rpx;
}
.setting-identity {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.15);
}
.identity-content {
  margin-top: 12rpx;
  font-size: 28rpx;
  color: #fff;
  line-height: 1.6;
  position: relative;
}
.fold-toggle-inline {
  font-size: 24rpx;
  color: #ddd;
  margin-left: 12rpx;
}

.style-content {
  font-size: 28rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  text-align: justify;
  padding: 32rpx 0rpx 32rpx 24rpx;
  border-radius: 16rpx;
}
.style-right-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.style-right-text {
  font-size: 24rpx;
  color: #999;
  margin-right: 12rpx;
}
.style-right-icon {
  color: #fff;
}