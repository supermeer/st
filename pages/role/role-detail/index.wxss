/* pages/role/role-detail/index.wxss */
.role-detail-page {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

/* 固定背景图 */
.page-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 0;
  object-fit: cover;
}

/* 可滚动内容区域 */
.scroll-content {
  position: relative;
  width: 100%;
  height: 100vh;
  z-index: 1;
}

/* 毛玻璃信息卡片 */
.info-card {
  margin: 100rpx 32rpx 24rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  color: #fff;
}

.chat-setting {
  font-size: 24rpx;
  position: relative;
  padding-bottom: 16rpx;
  margin-left: auto;
  color: rgb(253, 171, 11);
}

.role-name-section {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.role-name {
  font-size: 48rpx;
  font-weight: bold;
  margin-right: 16rpx;
}

.role-gender {
  font-size: 32rpx;
  opacity: 0.9;
}

.role-tags {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.tag {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.95);
  padding: 8rpx 20rpx;
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 30rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* 详情内容区域 */
.detail-content {
  border-radius: 24rpx 24rpx 0 0;
  margin: 0 32rpx;
  padding: 32rpx;
}

/* 标签页 */
.tabs {
  display: flex;
  gap: 48rpx;
  margin-bottom: 12rpx;
  padding: 16rpx;
  border-radius: 16rpx;
}

.tab {
  font-size: 32rpx;
  color: #fff;
  position: relative;
  padding-bottom: 16rpx;
}

.tab.active {
  color: var(--theme-color-purple);
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0rpx;
  left: 0;
  right: 0;
  height: 4rpx;
  background-color: var(--theme-color-purple);
  border-radius: 2rpx;
}

/* 内容区域 */
.content-section {
  padding-top: 16rpx;
}

.section-content {
  font-size: 28rpx;
  color: #fff;
  line-height: 1.8;
  text-align: justify;
  letter-spacing: 0.8rpx;
  padding: 12rpx;
  border-radius: 16rpx;
}

.section-title-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 70rpx;
  font-size: 24rpx;
  /* padding-top: 16rpx; */
}
.section-title {
  font-size: 24rpx;
  padding-left: 24rpx;
  color: #fff;
  margin: 12rpx 0;
}
.section-title-icon {
  color: #fff;
}
.memory-content {
  font-size: 28rpx;
  color: #fff;
  line-height: 2.5;
  text-align: justify;
  padding: 12rpx 24rpx;
  border-radius: 16rpx;
}
.setting-container {
  display: flex;
  gap: 12rpx;
}
/* setting-item 高度与宽度相等 */
.setting-item {
  flex: 1;
  flex-basis: 0;
  aspect-ratio: 1;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 12rpx;
}

.setting-item-value {
  font-size: 28rpx;
  margin-top: 12rpx;
}


.memory-slider {
 margin-bottom: 24rpx;
 --td-slider-bar-height: 24rpx;
 --td-slider-default-color: rgba(0, 0, 0, 0.3);
 --td-slider-active-color: rgba(255,255,255, 0.5);
 --td-slider-text-color: #fff;
}

.style-content {
  font-size: 28rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  text-align: justify;
  padding: 32rpx 0rpx 32rpx 24rpx;
  border-radius: 16rpx;
}
.style-right-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.style-right-text {
  font-size: 24rpx;
  color: #999;
  margin-right: 12rpx;
}
.style-right-icon {
  color: #fff;
}