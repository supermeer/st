/* pages/role/role-detail/index.wxss */
.role-detail-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.role-detail-header {
  padding: 32rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.role-detail-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.role-detail-content {
  margin-top: 20rpx;
  padding: 32rpx;
  background-color: #fff;
}

.role-info {
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 30rpx;
  color: #333;
}

