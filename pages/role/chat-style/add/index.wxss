.chat-style-add-page {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

/* 固定背景图 */
.page-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 0;
  object-fit: cover;
}

/* 可滚动内容区域 */
.scroll-content {
  position: relative;
  width: 100%;
  height: 100vh;
  z-index: 1;
}

/* 角色信息卡片 */
.chat-header {
  position: fixed;
  left: 32rpx;
  right: 32rpx;
  z-index: 10;
  padding: 32rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  color: #fff;
}

.chat-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-left: 12rpx;
}

.chat-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  flex-shrink: 0;
}

/* 设置表单 */
.settings-form {
  padding: 232rpx 32rpx 32rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 24rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  color: #fff;
}

.form-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.required-star {
  color: #ff4d4f;
  margin-right: 4rpx;
  font-size: 28rpx;
}

/* 输入框 */
.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #fff;
}

.input-placeholder {
  color: rgba(255, 255, 255, 0.5);
}

/* 文本域 */
.form-textarea {
  min-height: 300rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #fff;
  line-height: 1.6;
}


.style-textarea {
  min-height: 200rpx;
}

.textarea-counter {
  text-align: right;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-top: 12rpx;
}

/* textarea 包装器 */
.textarea-wrapper {
  position: relative;
}

/* 自定义多行 placeholder */
.custom-placeholder {
  position: absolute;
  top: 24rpx;
  left: 24rpx;
  right: 24rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
  line-height: 1.6;
  pointer-events: none;
  white-space: pre-wrap;
  word-wrap: break-word;
}

/* 提交按钮容器 */
.submit-container {
  position: fixed;
  left: 32rpx;
  right: 32rpx;
  z-index: 10;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  text-align: center;
  background: linear-gradient(135deg, #8B5CF6 0%, #A78BFA 100%);
  box-shadow: 0 8rpx 24rpx rgba(139, 92, 246, 0.4);
  border: none;
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.submit-btn::after {
  border: none;
}

