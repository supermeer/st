/* pages/role/style/index.wxss */
.style-page {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

/* 固定背景图 */
.page-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 0;
  object-fit: cover;
}

/* Tab栏 */
.tab-bar {
  height: 120rpx;
  position: relative;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 32rpx;
  gap: 48rpx;
}

.tab-item {
  position: relative;
  padding: 16rpx 24rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.tab-text {
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.6);
  transition: all 0.3s ease;
}

.tab-item.active .tab-text {
  color: #fff;
  font-weight: bold;
  font-size: 36rpx;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #8B5CF6 0%, #A78BFA 100%);
  border-radius: 3rpx;
}

/* 可滚动内容区域 */
.scroll-content {
  position: relative;
  flex: 1;
  width: 100%;
  z-index: 1;
}

/* 风格列表 */
.style-list {
  padding: 0 32rpx;
}

/* 风格项 */
.style-item {
  margin-bottom: 24rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s ease;
}

.style-item:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 风格信息 */
.style-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.style-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.style-count {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 导入操作 */
.import-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.import-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.import-icon {
  color: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 空状态 */
.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 120rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* 底部操作按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  padding: 24rpx 32rpx;
  display: flex;
  gap: 24rpx;
  /* background: linear-gradient(180deg, transparent 0%, rgba(0, 0, 0, 0.3) 100%);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx); */
}

.action-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.96);
}

/* 轮廓按钮 */
.outline-btn {
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
}

.outline-btn .btn-text {
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
}

/* 主要按钮 */
.primary-btn {
  background: linear-gradient(135deg, #8B5CF6 0%, #A78BFA 100%);
  box-shadow: 0 8rpx 24rpx rgba(139, 92, 246, 0.4);
}

.primary-btn .btn-text {
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
}

