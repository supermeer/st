/* pages/role/story/index.wxss */
.story-page {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

/* 固定背景图 */
.page-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 0;
  object-fit: cover;
}

/* 可滚动内容区域 */
.scroll-content {
  position: relative;
  width: 100%;
  height: 100vh;
  z-index: 1;
}

/* 故事列表 */
.story-list {
  padding: 100rpx 32rpx 0;
}

/* 故事项 */
.story-item {
  margin-bottom: 24rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  color: #fff;
  transition: all 0.3s ease;
}

.story-item:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 故事头部 */
.story-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.story-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.story-status {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.story-status.unlocked {
  background-color: rgba(108, 92, 231, 0.3);
  color: #6c5ce7;
  border-color: #6c5ce7;
}

.story-status.locked {
  background-color: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.6);
}

/* 故事描述 */
.story-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
  line-height: 1.6;
  margin-bottom: 20rpx;
  text-align: justify;
}

/* 故事底部 */
.story-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
}

.story-time {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.story-progress {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.progress-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.progress-bar {
  width: 120rpx;
  height: 8rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #6c5ce7, #a29bfe);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* 底部占位 */
.bottom-placeholder {
  height: 60rpx;
}

