/* pages/role/story/index.wxss */
.story-page {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

/* 固定背景图 */
.page-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 0;
  object-fit: cover;
}

/* 可滚动内容区域 */
.scroll-content {
  position: relative;
  width: 100%;
  height: 100vh;
  z-index: 1;
}

/* 角色信息卡片 */
.role-header {
  position: fixed;
  left: 32rpx;
  right: 32rpx;
  z-index: 10;
  padding: 32rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.role-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  flex-shrink: 0;
}

.role-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.role-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
}

.role-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 故事列表 */
.story-list {
  padding: 232rpx 32rpx 32rpx;
}

/* 故事项 */
.story-item {
  margin-bottom: 24rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  color: #fff;
  transition: all 0.3s ease;
}

.story-item:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 故事头部 */
.story-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.story-status-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.story-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}


/* 故事描述 */
.story-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
  line-height: 1.6;
  margin-bottom: 20rpx;
  text-align: justify;
}

/* 故事底部 */
.story-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
}

.story-time {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.footer-right-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.footer-right-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 24rpx;
  height: 24rpx;
}

.story-footer-icon {
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
