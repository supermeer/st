.chat-setting-page {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

/* 固定背景图 */
.page-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 0;
  object-fit: cover;
}

/* 可滚动内容区域 */
.scroll-content {
  position: relative;
  width: 100%;
  height: 100vh;
  z-index: 1;
}

/* 角色信息卡片 */
.chat-header {
  position: fixed;
  left: 32rpx;
  right: 32rpx;
  z-index: 10;
  padding: 24rpx 32rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  color: #fff;
}

.chat-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  flex-shrink: 0;
}

.chat-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  flex: 1;
}

/* 设置内容 */
.settings-content {
  padding: 180rpx 32rpx 32rpx;
}

/* 设置区块 */
.setting-section {
  margin-bottom: 24rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  color: #fff;
}

/* 区块标题 */
.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 24rpx;
}

/* 区块头部（带右侧操作） */
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.upgrade-btn {
  font-size: 26rpx;
  padding: 8rpx 16rpx;
  cursor: pointer;
}

.memory-link {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #fff;
  padding: 8rpx;
  cursor: pointer;
}

/* 今日对话配额 */
.chat-quota {
  display: flex;
  align-items: baseline;
  font-size: 28rpx;
  font-weight: bold;
}

.quota-used {
  color: #fff;
  font-size: 28rpx;
}

.quota-separator {
  color: rgba(255, 255, 255, 0.5);
  font-size: 28rpx;
  margin: 0 8rpx;
}

.quota-total {
  color: rgba(255, 255, 255, 0.6);
  font-size: 28rpx;
}

/* 模式项 */
.mode-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.mode-item:last-child {
  border-bottom: none;
}

.mode-content {
  flex: 1;
}

.mode-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #fff;
  margin-bottom: 8rpx;
}

.mode-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.mode-check {
  flex-shrink: 0;
  margin-left: 24rpx;
}

.mode-switch {
  transform: scale(0.75);
}

/* 记忆项 */
.memory-item {
  padding: 16rpx 0;
}

.memory-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.memory-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #fff;
}

.memory-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
}

.memory-slider {
  margin-bottom: 12rpx;
  --td-slider-bar-height: 24rpx;
  --td-slider-default-color: rgba(0, 0, 0, 0.3);
  --td-slider-active-color: rgba(255,255,255, 0.5);
  --td-slider-text-color: #fff;
}

/* 设置项 */
.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  cursor: pointer;
}

.setting-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #fff;
}

.setting-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

