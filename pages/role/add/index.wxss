/* pages/role/add/index.wxss */
page {
  background-color: #f5f5f5;
}

.role-add-container {
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.form-container {
  padding: 20rpx 32rpx;
}

.form-item {
  margin-bottom: 32rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.form-label.required::before {
  content: '*';
  color: #ff4444;
  margin-right: 8rpx;
  font-size: 32rpx;
}

/* 头像上传 */
.avatar-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.avatar-upload {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.placeholder-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 标签列表 */
.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  padding: 12rpx 32rpx;
  background-color: #f5f5f5;
  color: #666;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.tag-item.active {
  background-color: #e6f4ff;
  color: #1890ff;
  border-color: #1890ff;
}

/* 提交按钮 */
.submit-btn-wrapper {
  margin-top: 60rpx;
  padding: 0 32rpx;
}

