/* pages/role/add/index.wxss */
.role-add-page {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background: #000;
}

/* 固定背景图 */
.page-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 0;
  object-fit: cover;
}

/* 可滚动内容区域 */
.scroll-content {
  position: relative;
  width: 100%;
  z-index: 1;
}

/* 表单内容 */
.form-content {
  padding: 32rpx;
}

/* 头像上传区域 */
.avatar-section {
  /* display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  padding-left: 20rpx; */
  height: 140rpx;
  padding-bottom: 20rpx;
}

.bg-empty {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: bold;
  color: var(--yellow-btn-color);
  background: rgba(253, 171, 11, 0.2);
  border-radius: 26rpx;
}

.bg-empty-image {
  width: 56rpx;
  height: 56rpx;
  margin-right: 10rpx;
}

.edit-avatar {
  width: 140rpx;
  height: 140rpx;
}

.edit-avatar {
  width: 60%;
  height: 100%;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  color: #fff;
  font-size: 28rpx;
}

.avatar-image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.avatar-edit-icon {
  margin-left: auto;
}

.avatar-upload {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.avatar-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  margin-left: 24rpx;
}

/* 表单区块 */
.form-section {
  margin-bottom: 24rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  color: #fff;
}

.advanced-setting-container {
  display: flex;
  align-items: center;
  justify-content: center;
}
.advanced-setting {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--yellow-btn-color);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid var(--yellow-btn-color);
  border-radius: 35rpx;
  height: 70rpx;
  padding: 0 30rpx;
}

/* 区块标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 32rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
}

.form-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

/* 行内表单项 */
.form-item-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 表单标签 */
.form-label {
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
}

.form-item-row .form-label {
  margin-bottom: 0;
  flex-shrink: 0;
  min-width: 120rpx;
}

.label-required {
  color: #ff4d4f;
  margin-right: 4rpx;
  font-size: 32rpx;
}

/* 输入框 */
.form-input {
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  color: #fff;
  background: transparent;
  border: 2rpx solid rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.form-input-inline {
  flex: 1;
  text-align: right;
}

.input-placeholder {
  color: rgba(255, 255, 255, 0.4);
}

/* 选择框 */
.form-select {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  height: 80rpx;
  padding: 0 24rpx;
  background: transparent;
  border-radius: 16rpx;
  box-sizing: border-box;
}

.form-select-inline {
  flex: 1;
}

.select-placeholder {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.4);
}

.select-text {
  font-size: 28rpx;
  color: #fff;
}

/* 文本域项 */
.textarea-item {
  position: relative;
}

.textarea-counter {
  position: absolute;
  top: 4rpx;
  right: 0;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}

.label-placeholder {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
  padding-left: 16rpx;
  padding-bottom: 8rpx;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  font-size: 26rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 16rpx;
  padding: 20rpx;
  box-sizing: border-box;
  line-height: 1.6;
}

.textarea-placeholder {
  color: rgba(255, 255, 255, 0.3);
  font-size: 24rpx;
}

/* 设置项 */
.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #fff;
}

.setting-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.setting-value {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.5);
}

.advanced-meta-block {
  padding-top: 0;
}

.advanced-meta-block + .advanced-meta-block {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid rgba(255, 255, 255, 0.06);
}

.meta-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.meta-header-row {
  padding-right: 4rpx;
}

.meta-title {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #fff;
}

.meta-count {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}

.meta-desc {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
  padding-left: 16rpx;
}

.meta-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 18rpx;
}

.meta-option {
  padding: 18rpx 22rpx;
  border-radius: 18rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.35);
  background: rgba(0, 0, 0, 0.12);
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  text-align: center;
}

.meta-option-selected {
  border-color: var(--theme-color-purple);
  background: rgba(118, 75, 162, 0.18);
  color: #fff;
}

.tag-chips {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 18rpx;
  align-items: center;
}

.tag-chip {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 18rpx 20rpx;
  border-radius: 18rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.35);
  background: rgba(0, 0, 0, 0.12);
}

.tag-chip-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.tag-chip-close {
  margin-left: 10rpx;
}

.tag-add {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 18rpx 20rpx;
  border-radius: 18rpx;
  border: 2rpx dashed rgba(255, 255, 255, 0.35);
  color: rgba(255, 255, 255, 0.75);
  font-size: 26rpx;
}

.tag-add-plus {
  margin-right: 10rpx;
  font-size: 30rpx;
  line-height: 1;
}

.tag-selector-overlay {
  width: 100vw;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tag-selector-panel {
  width: 92vw;
  height: 70vh;
  border-radius: 24rpx;
  background: rgba(0, 0, 0, 0.55);
  backdrop-filter: blur(14px);
  -webkit-backdrop-filter: blur(14px);
  border: 2rpx solid rgba(255, 255, 255, 0.12);
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.tag-selector-header {
  padding: 24rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.08);
}

.tag-selector-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
}

.tag-selector-body {
  flex: 1;
  min-height: 0;
  padding: 22rpx 24rpx;
  box-sizing: border-box;
}

.tag-selector-sub {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-bottom: 16rpx;
}

.tag-selector-footer {
  padding: 18rpx 24rpx 22rpx;
  display: flex;
  gap: 18rpx;
  flex-shrink: 0;
  border-top: 2rpx solid rgba(255, 255, 255, 0.08);
}

.tag-selector-btn {
  flex: 1;
  height: 76rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
}

.tag-selector-btn.btn-cancel {
  border: 2rpx solid rgba(255, 255, 255, 0.28);
  color: rgba(255, 255, 255, 0.85);
  background: rgba(0, 0, 0, 0.12);
}

.tag-selector-btn.btn-confirm {
  background: var(--theme-color-purple);
  color: #fff;
}

/* 固定底部提交按钮 */
.submit-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  padding: 20rpx 32rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.4) 0%, transparent 100%);
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}
.edit-tip {
  font-size: 22rpx;
  color: var(--yellow-btn-color);
  font-weight: normal;
}

