/* pages/role/add/index.wxss */
.role-add-page {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background: #000;
}

/* 可滚动内容区域 */
.scroll-content {
  position: relative;
  width: 100%;
  z-index: 1;
}

/* 表单内容 */
.form-content {
  padding: 32rpx;
}

/* 头像上传区域 */
.avatar-section {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  padding-left: 20rpx;
}

.avatar-upload {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  margin-left: 24rpx;
}

/* 表单区块 */
.form-section {
  margin-bottom: 24rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  color: #fff;
}

/* 区块标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 32rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
}

.form-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

/* 行内表单项 */
.form-item-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 表单标签 */
.form-label {
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.form-item-row .form-label {
  margin-bottom: 0;
  flex-shrink: 0;
  min-width: 120rpx;
}

.label-required {
  color: #ff4d4f;
  margin-right: 4rpx;
  font-size: 32rpx;
}

/* 输入框 */
.form-input {
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  color: #fff;
  background: transparent;
  border: 2rpx solid rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.form-input-inline {
  flex: 1;
}

.input-placeholder {
  color: rgba(255, 255, 255, 0.4);
}

/* 选择框 */
.form-select {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  height: 80rpx;
  padding: 0 24rpx;
  background: transparent;
  border-radius: 16rpx;
  box-sizing: border-box;
}

.form-select-inline {
  flex: 1;
}

.select-placeholder {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.4);
}

.select-text {
  font-size: 28rpx;
  color: #fff;
}

/* 文本域项 */
.textarea-item {
  position: relative;
}

.textarea-counter {
  position: absolute;
  top: 4rpx;
  right: 0;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  font-size: 26rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 16rpx;
  padding: 20rpx;
  box-sizing: border-box;
  line-height: 1.6;
}

.textarea-placeholder {
  color: rgba(255, 255, 255, 0.3);
  font-size: 24rpx;
}

/* 设置项 */
.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #fff;
}

.setting-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.setting-value {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* 固定底部提交按钮 */
.submit-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  padding: 20rpx 32rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.4) 0%, transparent 100%);
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

