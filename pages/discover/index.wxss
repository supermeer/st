page {
  height: 100vh;
  box-sizing: border-box;
  overflow: hidden;
  /* 使页面从顶部开始，包括状态栏区域 */
  padding-top: 0;
  margin-top: 0;
  background-color: var(--theme-color-black);
}

/* 固定定位的背景层，调整z-index确保在最底层 */
.home-background {
  position: fixed;
  width: 100vw;
  height: 100vh;
  left: 0;
  top: 0;
  z-index: -999;
  background-size: cover;
  background-position: center center;
  background-repeat: no-repeat;
}

.home-page-container {
  min-height: 100vh;
  height: 100%;
  position: relative;
  /* 移除顶部内边距，因为已经有了自定义导航栏 */
  padding-top: 0;
  padding-bottom: calc(env(safe-area-inset-bottom) + 120rpx); /* 为tabbar预留空间 */
  box-sizing: border-box;
}

.header {
  position: relative;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  padding: 0 30rpx;
}

.login-container {
  margin-left: 30rpx;
  width: 280rpx;
  height:80rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  background-position: center;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 54rpx;
}

.info-container {
  margin-top: 42rpx;
}

.avatar {
  width: 108rpx;
  height: 108rpx;
  border-radius: 50%;
  border: 1px solid #ddd;
  overflow: hidden;
}

.user-name {
  font-size: 38rpx;
  /* font-weight: bold; */
  margin-left: 20rpx;
}

.user-tag {
  height: 56rpx;
  width: 168rpx;
  margin-left: 24rpx;
  background-size: cover;
  background-position: center;
}

.home-content {
  margin: 32rpx 30rpx 0 30rpx;
  background: rgba(244, 250, 255, 0.4);
  box-sizing: border-box;
  border-radius: 32rpx;
  overflow: hidden;
  backdrop-filter: blur(6.56px);
  padding: 32rpx;
  height: calc(100% - 360rpx);
}

.home-page-container .t-tabs.t-tabs--top .t-tabs__scroll {
  border-bottom: none !important;
}

.t-tabs__item:first-child {
  padding-left: 0rpx !important;
}

.t-tabs__item--tag {
  padding-top: 0rpx !important;
  padding-bottom: 0rpx !important;
}


.t-tabs__item, .t-tabs__scroll  {
  height: 52rpx !important;
}

.t-tabs__item--evenly {
  flex: none !important;
}


.category-desc {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 22rpx;
  font-weight: normal;
  margin-top: 12rpx;
  color: var(--theme-color);
}

.home-page-container .t-tabs .t-tabs-nav {
  border-bottom: none !important;
}

.t-tabs__scroll--split::after {
  height: 0 !important;
}

.t-tabs, .t-tabs__wrapper {
  background: transparent !important;
}

.t-tabs__item-inner--tag{
  font-weight: bold;
  color: rgba(0, 0, 0, 0.6);
  font-size: 24rpx;
  height: 52rpx;
}

.t-tabs__item-inner--active {
  background: linear-gradient(117deg, #63B4FF 14%, #174DFF 91%);
  color: #fff;
}

.tab-content-container {
  /* height: calc(100% - 340rpx); */
  max-height: calc(100% - 140rpx);
  overflow: auto;
  margin-top: 20rpx;
}

.cate-item {
  display: inline-flex;
  width: calc(50% - 12rpx);
  background: #fff;
  border-radius: 24rpx;
  height: 140rpx;
  padding:28rpx;
  margin-right: 12rpx;
  margin-bottom: 24rpx;
  box-sizing: border-box;
  overflow: hidden;
  align-items: center;
}

.cate-item:nth-child(2n) {
  margin-right: 0;
  margin-left: 12rpx;
}

.cate-item__long {
  width: 100%;
  margin-left: 0 !important;
  margin-right: 0 !important;
}
/* 点击效果 */
.cate-item:active {
  background: #ddd;
}

.cate-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 20rpx;
  flex-grow: 1;
  width: calc(100% - 120rpx);
}
.cate-icon {
  width: 72rpx;
  height: 72rpx;
  flex-shrink: 0;
}
.cate-name {
  font-size: 28rpx;
  font-weight: bold;
  height: 24rpx;
  line-height: 24rpx;
  color: rgba(0, 0, 0, 0.8);
}
.cate-desc {
  color: var(--desc-color);
  font-size: 20rpx;
  margin-top: 24rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: rgba(0, 0, 0, 0.5);
  height: 24rpx;
  line-height: 24rpx;
}
