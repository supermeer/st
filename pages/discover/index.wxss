page {
  height: 100vh;
  box-sizing: border-box;
  overflow: hidden;
  padding-top: 0;
  margin-top: 0;
  background-color: var(--theme-color-black);
}

.discover-page {
  width: 100%;
  height: 100vh;
  background-color: var(--theme-color-black);
  display: flex;
  flex-direction: column;
}

/* 页面标题 */
.page-title {
  text-align: center;
  font-size: 40rpx;
  font-weight: 600;
  padding: 20rpx 0;
  height: 60rpx;
  line-height: 60rpx;
}

/* 顶部导航 */
.top-nav {
  display: flex;
  align-items: center;
  height: 70rpx;
  padding: 0 32rpx 16rpx;
  background-color: var(--theme-color-black);
}

.nav-scroll {
  flex: 1;
  height: 70rpx;
  width: 0; /* 让flex: 1生效 */
  overflow: hidden;
}

.nav-tabs {
  display: inline-flex;
  align-items: center;
  height: 70rpx;
  white-space: nowrap;
}

.nav-tab {
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
  height: 70rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
  white-space: nowrap;
  transition: all 0.3s;
}

.nav-tab.active {
  /* 文字渐变色，与nav-underline一致 */
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  font-weight: 600;
}

.nav-underline {
  position: absolute;
  bottom: 8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 3rpx;
}

.search-icon {
  flex-shrink: 0;
  margin-left: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 64rpx;
  height: 64rpx;
}

/* 筛选标签 */
.filter-tags {
  padding: 0rpx 32rpx;
  background-color: var(--theme-color-black);
  height: 80rpx;
}

.tags-scroll {
  height: 64rpx;
  white-space: nowrap;
}

.tag-item {
  display: inline-block;
  padding: 12rpx 24rpx;
  margin-right: 16rpx;
  font-size: 26rpx;
  color: #999999;
  background-color: rgba(255, 255, 255, 0.08);
  border-radius: 32rpx;
  white-space: nowrap;
  transition: all 0.3s;
}

.tag-item.active {
  color: #ffffff;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  font-weight: 500;
}

/* 下拉刷新 */
.t-pull-down-refresh {
  flex: 1;
  overflow: hidden;
  --td-pull-down-refresh-color: #fff;
  --td-text-color-primary: #fff;
}

/* 内容滚动区域 */
.content-scroll {
  width: 100%;
  background-color: var(--theme-color-black);
}

/* 角色列表 */
.role-list {
  display: flex;
  flex-wrap: wrap;
  padding: 16rpx 24rpx;
  gap: 16rpx;
}

.role-card {
  width: calc(50% - 10rpx);
  aspect-ratio: 0.618;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-color: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  overflow: hidden;
  backdrop-filter: blur(10px);
  transition: all 0.3s;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.role-card:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.role-info {
  padding: 16rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.4) 50%, transparent 100%);
  position: relative;
  z-index: 1;
}

.role-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.role-name {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.role-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.role-tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  font-size: 22rpx;
  color: #999999;
  border-radius: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 160rpx;
}

/* 空态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-text {
  margin-top: 32rpx;
  font-size: 28rpx;
  color: #999999;
}

/* 加载更多 */
.load-more {
  padding: 32rpx 0;
}
