page {
  height: 100vh;
  box-sizing: border-box;
  overflow: hidden;
  background-color: var(--theme-color-black);
}

.search-page {
  width: 100%;
  height: 100vh;
  background-color: var(--theme-color-black);
  display: flex;
  flex-direction: column;
}

/* 搜索栏 */
.search-bar {
  height: 100rpx;
  width: 100%;
  z-index: 100;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  background-color: var(--theme-color-black);
  box-sizing: border-box;
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  height: 64rpx;
  background-color: rgba(255, 255, 255, 0.08);
  border-radius: 32rpx;
  padding: 0 24rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.15);
  transition: all 0.3s;
}

.search-input-wrapper:focus-within {
  border-color: #667eea;
  background-color: rgba(255, 255, 255, 0.12);
}

.search-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #ffffff;
  height: 100%;
}

.search-input::placeholder {
  color: #999999;
}

.clear-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 12rpx;
  padding: 8rpx;
}

.cancel-btn {
  flex-shrink: 0;
  margin-left: 24rpx;
  font-size: 28rpx;
  color: #ffffff;
  padding: 8rpx 0;
}

/* 内容滚动区域 */
.content-scroll {
  width: 100%;
  background-color: var(--theme-color-black);
}

/* 默认内容区域 */
.default-content {
  padding: 0 32rpx;
}

/* 区块样式 */
.history-section,
.hot-section {
  padding: 32rpx 0 0;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 600;
}

.clear-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx;
}

/* 关键词列表 */
.keyword-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.keyword-item {
  display: inline-flex;
  align-items: center;
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  color: #ffffff;
  background-color: rgba(255, 255, 255, 0.08);
  border-radius: 32rpx;
  transition: all 0.3s;
  white-space: nowrap;
}

.keyword-item:active {
  transform: scale(0.95);
  background-color: rgba(255, 255, 255, 0.15);
}

.keyword-item.hot {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.15) 0%, rgba(118, 75, 162, 0.15) 100%);
}

.keyword-item.hot:active {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.25) 0%, rgba(118, 75, 162, 0.25) 100%);
}

.keyword-item t-icon {
  margin-right: 8rpx;
}

/* 搜索结果区域 */
.result-content {
  width: 100%;
}

/* 搜索中状态 */
.searching-content {
  width: 100%;
  padding: 200rpx 0;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

/* 搜索结果头部 */
.result-header {
  padding: 24rpx 32rpx 16rpx;
}

.result-count {
  font-size: 26rpx;
  color: #999999;
}

/* 角色列表 */
.role-list {
  display: flex;
  flex-wrap: wrap;
  padding: 16rpx 24rpx;
  gap: 16rpx;
}

.role-card {
  width: calc(50% - 8rpx);
  aspect-ratio: 0.618;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-color: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  overflow: hidden;
  backdrop-filter: blur(10px);
  transition: all 0.3s;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.role-card:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.role-info {
  padding: 16rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.4) 50%, transparent 100%);
  position: relative;
  z-index: 1;
}

.role-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.role-name {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.role-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.role-tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  font-size: 22rpx;
  color: #999999;
  border-radius: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 160rpx;
}

/* 空态提示 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-text {
  margin-top: 32rpx;
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
}

.empty-tip {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999999;
}
