<wxs module="utils" src="./utils.wxs"></wxs>
<view class="discover-page">
  <!-- 自定义导航栏 -->
  <custom-nav
    class="custom-nav"
    show-back="{{false}}"
    show-left-logo="{{false}}"
    show-home="{{false}}"
    transparent="{{true}}"
  >
    <t-image slot="center" src="/static/discover/discover_nav.jpg" width="112rpx" height="50rpx" />
  </custom-nav>

  <!-- 顶部导航标签 -->
  <view class="top-nav">
    <scroll-view class="nav-scroll" scroll-x enable-flex show-scrollbar="{{false}}" scroll-left="{{navScrollLeft}}" scroll-with-animation>
      <view class="nav-tabs">
        <view 
          class="nav-tab {{activeNav === item.id ? 'active' : ''}}" 
          wx:for="{{navList}}" 
          wx:key="id"
          bindtap="onNavChange"
          data-value="{{item.id}}"
          data-index="{{index}}"
          id="nav-tab-{{index}}"
        > 
          {{item.name}}
          <view class="nav-underline" wx:if="{{activeNav === item.id}}"></view>
        </view>
      </view>
    </scroll-view>
    <view class="search-icon" bindtap="onSearch">
      <t-icon name="search" size="48rpx" color="#ffffff" />
    </view>
  </view>

  <!-- 筛选标签 -->
  <view class="filter-tags">
    <van-dropdown-menu class="order-dropdown" active-color="#1989fa">
      <van-dropdown-item value="{{ sortField }}" options="{{ orderOptions }}" bind:change="onOrderChange" />
    </van-dropdown-menu>
    <scroll-view class="tags-scroll" scroll-x show-scrollbar="{{false}}" scroll-left="{{tagScrollLeft}}" scroll-with-animation>    
      <view class="tag-item {{utils.includes(activeTags, item.id) ? 'active' : ''}}" 
        wx:for="{{tagList}}" 
        wx:key="id"
        bindtap="onTagChange"
        data-value="{{item.id}}"
        data-index="{{index}}"
        id="tag-item-{{index}}"
      >
        #{{item.name}}
      </view>
    </scroll-view>
  </view>

  <!-- 下拉刷新 + 角色列表 -->
  <t-pull-down-refresh
    value="{{refreshing}}"
    loadingProps="{{loadingProps}}"
    loadingTexts="{{['下拉刷新', '松手刷新', '正在刷新', '刷新完成']}}"
    bind:refresh="onRefresh"
    bind:timeout="onTimeout"
    disabled="{{!isScrollTop}}"
  >
    <scroll-view 
      class="content-scroll" 
      scroll-y
      bindscrolltolower="onLoadMore"
      bindscroll="onScroll"
      style="height: {{scrollHeight}};"
    >
      <!-- 角色卡片列表 -->
      <view class="role-list">
        <view
          wx:if="{{showSwiper}}"
          class="role-card role-card_active"
        >
          <swiper
            class="role-swiper"
            current="{{activeForm.current}}"
            indicator-dots="{{true}}"
            autoplay="{{activeForm.autoplay}}"
            interval="{{activeForm.interval}}"
            duration="{{activeForm.duration}}"
            circular="{{true}}"
            layout-type="transformer"
            transformer-type="scaleAndFade"
            bindchange="onActiveChange"
          >
            <swiper-item
              wx:for="{{activeForm.list}}"
              class="role-swiper-item {{index === activeForm.current ? 'role-swiper-item__active' : ''}}"
              wx:key="index"
              data-index="{{index}}"
              bindtap="onActivityClick"
            >
              <t-image class="role-swiper-content"  src="{{item.url}}" />
              <!-- <view class="role-swiper-content">{{index}}</view> -->
            </swiper-item>
          </swiper>
        </view>


        <view 
          class="role-card" 
          wx:for="{{roleList}}" 
          wx:key="id"
          bindtap="onRoleClick"
          data-id="{{item.id}}"
          style="background-image: url('{{showBG ? item.backgroundImage : ''}}');"
        >
          <view class="role-info">
            <view class="role-name-row">
              <text class="role-name">{{item.name}}</text>
              <t-icon name="check-circle-filled" size="32rpx" color="#4A9EFF" wx:if="{{item.verified}}" />
            </view>
            <role-hot-container chatCount="{{item.messageCount}}" roleHot="{{item.browseCount}}" />
            <view class="role-tags">
              <text class="role-tag blur-glass" wx:for="{{item.tagNames}}" wx:key="index" wx:for-item="tag">#{{tag}}</text>
            </view>
          </view>
        </view>
      </view>

      <!-- 加载更多组件 -->
      <load-more
        wx:if="{{pageNo > 1}}"
        status="{{loadMoreStatus}}" 
        list-is-empty="{{listIsEmpty}}"
        bind:retry="onRetryLoad"
        noMoreText="超多角色正快马赶来，不负期待✨"
      >
        <view slot="empty" class="empty-container">
          <text class="empty-text">暂无内容</text>
        </view>
      </load-more>
      <view style="height: calc({{pageInfo.safeAreaBottom}}px + {{pageInfo.tabbarHeight}}rpx);"></view>
    </scroll-view>
  </t-pull-down-refresh>
</view>

<t-toast id="t-toast" />

<points-recharge-dialog
  id="pointsRechargeDialog"
/>

<t-overlay
  visible="{{discountForm.visible}}"
  duration="{{500}}"
  bind:click="discountOverlayClick"
>
  <!-- <t-image style="width: 100%; height: 100%; display: flex; align-items: center;" mode="widthFix" src="{{discountForm.picUrl}}"  /> -->
   <image src="{{discountForm.picUrl}}" mode="widthFix" style="width: 100%;transform: translateY(-50%); top: 50%; position: relative;"  bindtap="handleDiscountClick"/>
</t-overlay>

<model-sheet id="modelSheet" />

<richtext-dialog
  id="richtextDialog"
  bind:action="richtextAction"
/>
