/* 整体容器 */
.chat-container {
  display: flex;
  flex-direction: column;
  background: rgba(23, 77, 255, 0.12);
  box-sizing: border-box;
  overflow: hidden;
  transition: height 0.2s ease-in-out;
}
.custom-nav {
  z-index: 1000;
  flex-grow: 0;
  flex-shrink: 0;
}

.page-content {
  padding: 0;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-sizing: border-box;
}

/* 消息列表区域 */
.message-list {
  overflow-y: auto;
  flex-grow: 1;
  flex-shrink: 1;
  flex-basis: 0;
  /* padding: 0 32rpx 32rpx; */
  padding-bottom: 32rpx;
  width: 100%;
  height: 0; /* 配合flex-grow:1使用 */
  box-sizing: border-box;
}

/* 空状态 */
.empty-container {
  height: 70vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.empty-tips {
  font-size: 28rpx;
  color: #888;
  margin-top: 20rpx;
}

/* 消息项 */
.message-item {
  max-width: calc(100% - 68rpx);
  margin-bottom: 32rpx;
  border-radius: 24rpx;
  padding: 16rpx 32rpx;
  word-break: break-word;
  box-sizing: border-box;
}

.user-message-item {
  max-width: calc(100% - 68rpx);
  margin: 0 32rpx 32rpx auto;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.images-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  gap: 24rpx;
  padding-bottom: 16rpx;
}

.image-item {
  width: 100rpx;
  height: 100rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-sizing: border-box;
}

/* 用户消息 */
.user-message {
  max-width: 100%;
  align-self: flex-end;
  margin-left: auto;
  background: linear-gradient(0deg, rgba(23, 77, 255, 0.1) 24%, rgba(255, 255, 255, 0) 95%);
  border: 1px solid #174DFF;
  display: flex;
  border-radius: 24rpx;
  padding: 16rpx 32rpx;
  word-break: break-word;
  box-sizing: border-box;
}

.user-btn-container {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin-top: 16rpx;
  color: var(--theme-color);
  font-size: 24rpx;
}


/* AI回复消息 */
.ai-message {
  align-self: flex-start;
  background-color: #ffffff;
  color: #333;
  margin-left: 32rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 加载状态 */
.loading-container {
  padding: 10rpx;
  display: flex;
  align-items: center;
}

.loading-icon {
  margin: 10rpx;
}

/* 错误消息 */
.error-message {
  color: #fa5151;
  font-size: 28rpx;
  padding: 10rpx;
}

/* 消息内容 */
.message-content {
  font-size: 30rpx;
  line-height: 1.5;
  text-align: justify;
}

/* Markdown样式 */
.markdown-body {
  font-size: 30rpx;
  line-height: 1.6;
  letter-spacing: 0;
}

.markdown-body rich-text {
  width: 100%;
  overflow-x: auto;
}

/* 代码块样式 */
.markdown-body .code-block {
  background-color: #f6f8fa;
  border-radius: 6rpx;
  padding: 16rpx;
  overflow-x: auto;
  font-family: 'SFMono-Regular', Consolas, 'Liberation Mono', Menlo, monospace;
  font-size: 85%;
}

.copy-btn-container {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin-top: 16rpx;
  color: var(--theme-color);
  font-size: 24rpx;
}

.copy-btn {
  font-size: 28rpx;
  margin-right: 6rpx;
}

/* 底部占位 */
.bottom-space {
  height: 40rpx;
}

/* 输入区域 */
.input-container {
  z-index: 1000;
  flex-grow: 0;
  flex-shrink: 0;
  padding: 0 32rpx;
}

.input-wrapper {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  border-radius: 24rpx;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 18rpx 24rpx;
}

.message-input {
  /* min-height: 72rpx; */
  max-height: 200rpx;
  font-size: 30rpx;
  line-height: 1.5;
  background-color: transparent;
  padding: 0;
  flex-grow: 1;
}

.send-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  font-size: 28rpx;
  border-radius: 24rpx;
  box-shadow: 0px 2px 6px 2px rgba(23, 77, 255, 0.08);
}