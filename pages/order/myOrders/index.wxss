.orders-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.nav-container {
  background-color: transparent;
}

.content-container {
  flex: 1;
  width: 100%;
  overflow: hidden;
}

.order-list-refresh {
  height: 100%;
}

.order-list-container {
  height: 100%;
  padding: 16rpx;
  box-sizing: border-box;
}

.order-list {
  width: 100%;
}

.order-item {
  margin-top: 22rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx 0 rgba(0, 0, 0, 0.05);
}

.order-header {
  height: 36rpx;
  line-height: 36rpx;
  color: rgba(0, 0, 0, 0.6);
  font-size: 20rpx;
  letter-spacing: 0.8rpx;
}

.order-goods {
  margin-top: 14rpx;
  display: flex;
  align-items: center;
}
.order-goods-name {
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(0, 0, 0, 0.8);
  letter-spacing: 0.8rpx;
}
.order-goods-count {
  font-size: 24rpx;
  margin-left: 46rpx;
  color: rgba(0, 0, 0, 0.6);
  letter-spacing: 0.8rpx;
}
.order-goods-price {
  font-size: 28rpx;
  color: #174EFF;
  font-weight: bold;
  letter-spacing: 0.8rpx;
  margin-left: auto;
}

.order-footer {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
}

.order-time {
  height: 36rpx;
  line-height: 36rpx;
  color: rgba(0, 0, 0, 0.6);
  font-size: 20rpx;
  letter-spacing: 0.8rpx;
}

.order-status {
  height: 36rpx;
  line-height: 36rpx;
  font-size: 20rpx;
  color: rgba(0, 0, 0, 0.6);
  letter-spacing: 0.8rpx;
  margin-left: auto;
}

.order-status-error {
  color: #F94B30;
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
} 