/* pages/chat-list/index.wxss */
page {
  height: 100vh;
  box-sizing: border-box;
  overflow: hidden;
  padding-top: 0;
  margin-top: 0;
  background-color: #000;
}

.nav-title {
  font-size: 60rpx;
  color: var(--theme-color-purple);
  font-weight: bold;
  /* 元素整体压缩为66% */
  transform: scaleY(0.618);
  letter-spacing: 0;
}

.chat-page-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 下拉刷新 */
.t-pull-down-refresh {
  flex: 1;
  overflow: hidden;
  --td-pull-down-refresh-color: #fff;
  --td-text-color-primary: #fff;
}

/* 内容滚动区域 */
.chat-content {
  width: 100%;
}

/* 聊天列表 */
.chat-list {
  padding: 0;
  width: 100%;
}

/* 聊天项包装器 */
.chat-item-wrapper {
  width: calc(100% - 32rpx);
  margin-left: 16rpx;
}

.chat-swipe-cell {
  width: 100%;
}

/* 聊天项 */
.chat-item {
  width: 100%;
  display: inline-flex;
  align-items: center;
  padding: 24rpx 12rpx;
  position: relative;
  transition: background-color 0.3s;
}

.chat-item-wrapper:active {
  background-color: rgba(255, 255, 255, 0.05);
}

.chat-item-line {
  width: 100%;
  height: 2rpx;
  background: #66666666;
}

.top-chat-item {
  background: #0f172aff;
}

/* 头像 */
.chat-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
  flex-shrink: 0;
  background-color: rgba(255, 255, 255, 0.1);
}

.chat-avatar image {
  width: 100%;
  height: 100%;
}

/* 聊天信息 */
.chat-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-width: 0;
  font-weight: bold;
}

.chat-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.chat-name {
  flex: 1;
  font-size: 32rpx;
  color: #ffffff;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 16rpx;
}

.chat-time {
  font-size: 24rpx;
  color: #999999;
  flex-shrink: 0;
  white-space: nowrap;
}

.chat-last-msg {
  font-size: 26rpx;
  color: #999999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

/* 侧滑操作按钮 */
.swipe-actions {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.swipe-action {
  width: 64px;
  height: 64px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  gap: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
  background: #ffffff30;
  border-radius: 16rpx;
}

.top-btn {
  color: #fff;
}

.delete-btn {
  color: #ee5a6f;
  margin-left: 2px;
}

.delete-btn:active {
  opacity: 0.8;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 500rpx;
  padding-top: 100rpx;
}

.empty-text {
  margin-top: 32rpx;
  font-size: 28rpx;
  color: #999999;
}

/* 悬浮按钮 */
.t-fab {
  position: fixed !important;
  right: 32rpx !important;
  bottom: calc(120rpx + env(safe-area-inset-bottom)) !important;
  z-index: 100 !important;
}

