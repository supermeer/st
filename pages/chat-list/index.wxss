/* pages/chat/index.wxss */
page {
  height: 100vh;
  box-sizing: border-box;
  overflow: hidden;
  padding-top: 0;
  margin-top: 0;
  background-color: #f5f5f5;
}

.chat-page-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.chat-content {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx 0;
}

.chat-list {
  background-color: #fff;
}

.chat-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.chat-item:active {
  background-color: #f5f5f5;
}

.chat-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.chat-avatar image {
  width: 100%;
  height: 100%;
}

.chat-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-width: 0;
}

.chat-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.chat-last-msg {
  font-size: 28rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.chat-time {
  font-size: 24rpx;
  color: #999;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 500rpx;
  padding-top: 100rpx;
}

.empty-text {
  margin-top: 32rpx;
  font-size: 28rpx;
  color: #999;
}

