page {
  background-color: #121212;
  background-color: ;
  background: linear-gradient(
    180deg,
    rgb(153, 140, 215) 0%,
    rgb(104, 122, 209) 15%,
    #121212 30%,
    #121212 100%
  );
  overflow: hidden;
}
.usercenter-page-container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.custom-nav {
  flex-shrink: 0;
}
.usercenter-content {
  padding: 0 32rpx;
  box-sizing: border-box;
  /* flex: 1; */
  padding-bottom: 32rpx;
  overflow: auto;
  /* height: calc(100vh - 44px - env(safe-area-inset-bottom) - env(safe-area-inset-top) - 172rpx); */
  display: flex;
  flex-direction: column;
}

/* 自定义logo样式 */
.usercenter-logo {
  width: 152rpx;
  height: 36rpx;
  padding-left: 8rpx;
  padding-top: 4rpx;
}

.user-info {
  width: 100%;
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  color: #fff;
}
.user-info-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 2px solid #fff;
  margin-right: 20rpx;
}
.user-info-name {
  font-size: 40rpx;
  font-weight: bold;
}
.user-info-uid {
  font-size: 24rpx;
  font-weight: normal;
  margin-top: 24rpx;
  color: #ddd;
}

.user-invite-code {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: var(--magic-color);
  font-weight: normal;
  margin-top: 12rpx;
  gap: 24rpx;
}
.user-invite-code-item {
  display: flex;
  align-items: center;
}
.user-invite-code-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.user-info-arr {
  margin-left: auto;
}

.score-box {
  width: 100%;
  padding: 32rpx 24rpx;
  margin-top: 30rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  display: flex;
  align-items: center;
  border-radius: 24rpx;
}
.score-box-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 12rpx;
}
.score-box-text {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--theme-color-purple);
}
.score-box-desc {
  font-size: 24rpx;
  color: #bbb;
  justify-self: flex-end;
  margin-left: auto;
}
.score-box-arr {
  font-size: 18px;
  color: #ddd;
  margin-left: 12rpx;
}

.vip-box {
  width: 100%;
  margin-top: 12rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  background: rgba(240, 240, 240, 0.2);
  display: flex;
  justify-content: space-bettwen;
  align-items: center;
}

.vip-box-left-content {
  flex: 1;
}

.vip-box-header {
  display: flex;
  align-items: center;
}

.vip-box-header-icon {
  width: 40rpx;
  height: 40rpx;
}

.vip-box-header-text {
  margin-left: 12rpx;
  font-weight: bold;
  font-size: 32rpx;
  color: var(--theme-color-purple);
}

.open-vip-btn {
  margin-left: auto;
  padding: 12rpx 16rpx;
  background: rgb(214, 190, 217);
  color: var(--magic-color);
  border-radius: 16rpx;
}

.open-vip-btm-line {
  color: 24rpx;
  color: #fff;
  font-weight: bold;
  margin-top: 24rpx;
}

.vip-box-icon {
  margin-left: auto;
  width: 80rpx;
  height: 80rpx;
}

.roles-title {
  color: #ddd;
  font-size: 24rpx;
  padding: 24rpx 12rpx;
  display: flex;
  align-items: center;
}

.roles-title-desc {
  font-size: 20rpx;
  color: #999;
  margin-left: 12rpx;
}

.role-type-tabs {
  width: 100%;
  display: inline-flex;
  height: 70rpx;
  white-space: nowrap;
  padding-bottom: 10rpx;
}
.role-type-tab {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
  height: 60rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #999;
  white-space: nowrap;
  transition: all 0.3s;
  margin-left: 20rpx;
}
.role-type-tab.active {
  background: rgba(255, 255, 255, 0.5);
  border-radius: 35rpx;
  color: #fff;
}


.role-list {
  display: flex;
  flex-wrap: wrap;
  padding: 16rpx 0;
  gap: 16rpx;
  max-height: calc(100% - 630rpx);
  overflow-y: auto;
}

.role-card {
  width: calc(33.333% - 12rpx);
  aspect-ratio: 0.618;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-color: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  overflow: hidden;
  backdrop-filter: blur(10px);
  transition: all 0.3s;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.role-status-ribbon {
  position: absolute;
  top: 18rpx;
  right: -44rpx;
  z-index: 2;
  width: 160rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  font-size: 22rpx;
  font-weight: 700;
  transform: rotate(45deg);
  transform-origin: center;
  border-radius: 8rpx;
  box-shadow: 0 8rpx 18rpx rgba(0, 0, 0, 0.35);
  letter-spacing: 1rpx;
}

.role-status-ribbon.status-pending {
  background: linear-gradient(135deg, rgba(26, 106, 255, 0.5) 0%, rgba(26, 106, 255, 0.22) 100%);
  color: #0361ee;
}

.role-status-ribbon.status-approved {
  background: linear-gradient(135deg, rgba(110, 243, 181, 0.26) 0%, rgba(23, 201, 100, 0.26) 100%);
  color: #063a1e;
}

.role-status-ribbon.status-rejected {
  background: linear-gradient(135deg, rgba(253, 10, 10, 0.5) 0%, rgba(253, 10, 10, 0.24) 100%);
  color: #f32d2d;
}

.role-status-ribbon.status-offline {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.52) 0%, rgba(200, 200, 200, 0.20) 100%);
  color: #aaa;
}

.role-status-ribbon.status-draft {
  background: linear-gradient(135deg, rgba(139, 143, 255, 0.24) 0%, rgba(168, 85, 247, 0.24) 100%);
  color: #12002b;
}

.role-card:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.role-info {
  padding: 16rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.4) 50%, transparent 100%);
  position: relative;
  z-index: 1;
}

.role-name-row {
  display: flex;
  align-items: center;
}

.role-name {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.role-empty-state {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 32rpx;
  color: #999;
}

.empty-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #ddd;
  margin-top: 24rpx;
}

.author-btn {
  color: var(--magic-color);
}

.empty-desc {
  font-size: 28rpx;
  color: var(--magic-color);
  margin-top: 18rpx;
  display: flex;
  align-items: center;
  font-weight: bold;
}

.role-create-btn {
  margin-right: 12rpx;
}