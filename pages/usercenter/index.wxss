  background: linear-gradient(
    180deg,
    rgb(153, 140, 215) 0%,
    rgb(104, 122, 209) 15%,
    #121212 30%,
    #121212 100%
  );
  overflow: hidden;
}
.usercenter-page-container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.custom-nav {
  flex-shrink: 0;
}
.usercenter-content {
  padding: 0 32rpx;
  box-sizing: border-box;
  /* flex: 1; */
  padding-bottom: 32rpx;
  overflow: auto;
  /* height: calc(100vh - 44px - env(safe-area-inset-bottom) - env(safe-area-inset-top) - 172rpx); */
  display: flex;
  flex-direction: column;
}

/* 自定义logo样式 */
.usercenter-logo {
  width: 152rpx;
  height: 36rpx;
  padding-left: 8rpx;
  padding-top: 4rpx;
}

.user-info {
  width: 100%;
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  color: #fff;
}
.user-info-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 2px solid #fff;
  margin-right: 20rpx;
}
.user-info-name {
  font-size: 40rpx;
  font-weight: bold;
}
.user-info-uid {
  font-size: 24rpx;
  font-weight: normal;
  margin-top: 24rpx;
  color: #ddd;
}

.user-info-arr {
  margin-left: auto;
}

.score-box {
  width: 100%;
  padding: 32rpx 24rpx;
  margin-top: 30rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  display: flex;
  align-items: center;
  border-radius: 24rpx;
}
.score-box-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 12rpx;
}
.score-box-text {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--magic-color);
}
.score-box-desc {
  font-size: 24rpx;
  color: #bbb;
  justify-self: flex-end;
  margin-left: auto;
}
.score-box-arr {
  font-size: 18px;
  color: #ddd;
  margin-left: 12rpx;
}

.vip-box {
  width: 100%;
  margin-top: 12rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  background: rgb(79, 80, 87);
  display: flex;
  justify-content: space-bettwen;
  align-items: center;
}

.vip-box-left-content {
  flex: 1;
}

.vip-box-header {
  display: flex;
  align-items: center;
}

.vip-box-header-icon {
  width: 40rpx;
  height: 40rpx;
}

.vip-box-header-text {
  margin-left: 12rpx;
  font-weight: bold;
  font-size: 32rpx;
  color: var(--magic-color);
}

.open-vip-btn {
  margin-left: auto;
  padding: 12rpx 16rpx;
  background: rgb(214, 190, 217);
  color: var(--magic-color);
  border-radius: 16rpx;
}

.open-vip-btm-line {
  color: 24rpx;
  color: #fff;
  font-weight: bold;
  margin-top: 24rpx;
}

.vip-box-icon {
  margin-left: auto;
  width: 80rpx;
  height: 80rpx;
}

.roles-title {
  color: #ddd;
  font-size: 24rpx;
  padding: 24rpx 12rpx;
}

.role-list {
  display: flex;
  flex-wrap: wrap;
  padding: 16rpx 0;
  gap: 16rpx;
  max-height: calc(100% - 560rpx);
  overflow-y: auto;
}

.role-card {
  width: calc(33.333% - 12rpx);
  aspect-ratio: 0.618;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-color: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  overflow: hidden;
  backdrop-filter: blur(10px);
  transition: all 0.3s;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.role-card:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.role-info {
  padding: 16rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.4) 50%, transparent 100%);
  position: relative;
  z-index: 1;
}

.role-name-row {
  display: flex;
  align-items: center;
}

.role-name {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.role-empty-state {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 32rpx;
  color: #999;
}

.empty-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #ddd;
  margin-top: 24rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}