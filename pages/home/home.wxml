<view class="home-page-container" style="background-image: url('{{currentBg}}'); background-repeat: no-repeat; background-position: center center; background-size: cover;">
  <view class="home-content" style="padding-bottom: {{paddingBtm}}">
    <chat
      class="chat-container"
      bind:hideTabbar="hideTabbar"
      bind:showTabbar="showTabbar"
      bind:retryMessage="onRetryMessage"
      roleInfo="{{roleForm}}"
      id="chat"
    />
  </view>
</view>

<background-sheet id="backgroundSheet" />

<auth id="auth" check-phone="{{false}}" bind:loginSuccess="loginSuccess" />
