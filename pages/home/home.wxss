page {
  height: 100vh;
  box-sizing: border-box;
  overflow: hidden;
  background-color: var(--theme-color-black);
}

.home-page-container {
  height: 100vh;
  width: 100vw;
  position: relative;
  box-sizing: border-box;
}
.home-content {
  width: 100%;
  height: 100%;
}
.chat-container {
  width: 100%;
  height: 100%;
}

/* 测试思考过程按钮 */
.test-thinking-btn {
  position: fixed;
  right: 30rpx;
  top: 150rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 50rpx;
  font-size: 28rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  z-index: 100;
  transition: all 0.3s ease;
}

.test-thinking-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}