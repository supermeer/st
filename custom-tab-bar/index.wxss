.custom-tab-bar {
  padding: 0 80rpx;  
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  position: relative;
  font-size: 16px;
  box-sizing: border-box;
}

.tab-bar-container {
  background-color: rgba(16, 20, 23);
  width: 100%;
  display: flex;
  height: 120rpx;
  border-radius: 60rpx;
  align-items: center;
  justify-content: space-around;
  padding: 20rpx 60rpx;
  box-sizing: border-box;
  position: relative;
  backdrop-filter: blur(4px);
  border: 1px solid rgba(100, 200, 255, 0.2);
  box-shadow: 0 4px 30px rgba(0, 150, 255, 0.2);
}

.tab-item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 30%;
  height: 100%;
  color: #8cb4d9;
  border-radius: 60rpx;
  transition: color 0.3s;
  position: relative;
  z-index: 2;
}

.text {
  font-size: 24rpx;
  font-weight: 600;
  letter-spacing: 0.5px;
  font-weight: bold;
  display: none
}

.tab-item.active .text {
  color: white;
  text-shadow: 0 0 8px rgba(100, 200, 255, 0.7);
  display: block;
  margin-left: 16rpx;
}

.icon {
  width: 40rpx;
  height: 40rpx;
}

/* 科技风滑块样式 */
.slider {
  position: absolute;
  top: 8px;
  bottom: 8px;
  z-index: 1;
  border-radius: 24px;
  box-shadow: 0 0 20px rgba(0, 150, 255, 1);
  transform-origin: center;
  overflow: hidden;
  transform: translateZ(0);
  will-change: transform, width;
  transition: all 0.65s cubic-bezier(0.19, 1, 0.22, 1);
}

/* 流光效果 */
.shine {
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.4),
    transparent
  );
  animation: shine 3s infinite;
}

@keyframes shine {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(200%); }
}