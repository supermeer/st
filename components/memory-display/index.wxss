/* 记忆卡片 */
.memory-card {
  border-radius: 20rpx;
  padding: 28rpx 24rpx;
  background: #2a2a2a;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

/* 卡片背景颜色区分 - 第一项：白色边框 */
.memory-card-0 {
  border-color: rgba(255, 255, 255, 0.3);
  background: rgba(255, 255, 255, 0.05);
}

/* 卡片背景颜色区分 - 第二项：主题色 */
.memory-card-1 {
  border-color: rgba(124, 90, 255, 0.5);
  background: rgba(124, 90, 255, 0.1);
}

/* 卡片背景颜色区分 - 第三项：紫色 */
.memory-card-2 {
  border-color: rgba(168, 85, 247, 0.5);
  background: rgba(168, 85, 247, 0.1);
}

/* 卡片背景颜色区分 - 第四项：黄色 */
.memory-card-3 {
  border-color: rgba(255, 193, 7, 0.5);
  background: rgba(255, 193, 7, 0.1);
}

/* 卡片内容 */
.memory-card-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 卡片顶部 - 标签和数值 */
.memory-card-top {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}

/* 卡片标签 */
.memory-card-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
}

/* 卡片数值 */
.memory-card-value {
  font-size: 48rpx;
  font-weight: bold;
}

/* 数值颜色区分 - 第一项：白色 */
.memory-card-0 .memory-card-value {
  color: #fff;
}

/* 数值颜色区分 - 第二项：主题色 */
.memory-card-1 .memory-card-value {
  color: var(--theme-color);
}

/* 数值颜色区分 - 第三项：紫色 */
.memory-card-2 .memory-card-value {
  color: var(--theme-color-purple);
}

/* 数值颜色区分 - 第四项：黄色 */
.memory-card-3 .memory-card-value {
  color: var(--yellow-btn-color);
}

/* 卡片描述 */
.memory-card-description {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.5;
}
