.image-uploader {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
}

.loading-container {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-content {
  border-radius: 24rpx;
  padding: 80rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 400rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #e8e8e8;
  border-top-color: #174dff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 40rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  margin-bottom: 40rpx;
}

.loading-actions {
  display: flex;
  justify-content: center;
}

.cancel-btn {
  padding: 20rpx 40rpx;
  color: #aaa;
  font-size: 28rpx;
  border-radius: 12rpx;
} 