/* 遮罩层 */
.input-sheet-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 10000;
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 弹窗容器 */
.input-sheet-container {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #000;
  border-radius: 32rpx 32rpx 0 0;
  padding: 24rpx 32rpx 48rpx;
  padding-bottom: calc(48rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  transform: translateY(100%);
  transition: transform 0.3s ease-in-out;
  z-index: 10001;
}

.input-sheet-container.show {
  transform: translateY(0);
}

/* 顶部指示条 */
.input-sheet-indicator {
  width: 72rpx;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 4rpx;
  margin: 0 auto 32rpx;
}

/* 标题 */
.input-sheet-title {
  color: #ffffff;
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 48rpx;
  text-align: left;
}

/* 表单区域 */
.input-sheet-form {
  margin-bottom: 48rpx;
}

/* 标签 */
.form-label {
  color: #ffffff;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  text-align: left;
}

/* 输入框 */
.form-input {
  width: 100%;
  height: 96rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  color: #ffffff;
  font-size: 28rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.input-placeholder {
  color: rgba(255, 255, 255, 0.3);
}

/* 按钮组 */
.input-sheet-buttons {
  display: flex;
  justify-content: space-between;
  width: 100%;
  gap: 24rpx;
}

/* 按钮基础样式 */
.input-sheet-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s;
}

/* 取消按钮 */
.cancel-btn {
  background: transparent;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.6);
}

.cancel-btn:active {
  opacity: 0.7;
}

/* 确认按钮 */
.confirm-btn {
  background: linear-gradient(135deg, #7c5aff 0%, #a78bfa 50%, #8b5cf6 100%);
  color: #ffffff;
  font-weight: 600;
  box-shadow: 0 4rpx 20rpx rgba(124, 90, 255, 0.4);
}

.confirm-btn:active {
  opacity: 0.8;
}

