view {
  letter-spacing: 0.8rpx;
}

.invite-dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.invite-dialog-container {
  width: 622rpx;
  background: #000;
  border-radius: 32rpx;
  padding: 48rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  border: 1rpx solid #666;
}

.invite-dialog {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  color: #fff;
}

.invite-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
}

.invite-desc {
  font-size: 28rpx;
  color: #fff;
  line-height: 1.6;
  margin-bottom: 48rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  margin-top: 32rpx;
  position: relative;
}

.input-icon {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 6rpx;
  margin-right: 24rpx;
}

.icon-line {
  width: 36rpx;
  height: 4rpx;
  background: #999;
  border-radius: 2rpx;
}

.icon-line-short {
  width: 28rpx;
}

.invite-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.input-placeholder {
  color: #999;
}

.error-msg {
  margin-top: 24rpx;
  font-size: 26rpx;
  color: #ff4d4f;
  position: absolute;
  bottom: -60rpx;
}

.footer {
  margin-top: 124rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
}

.cancel-btn {
  background: transparent;
  border: 2rpx solid #fff;
  color: #fff;
}

.confirm-btn {
  background: linear-gradient(135deg, #7c5aff 0%, #a78bfa 50%, #8b5cf6 100%);
  color: #fff;
  box-shadow: 0 4rpx 20rpx rgba(124, 90, 255, 0.6);
}
