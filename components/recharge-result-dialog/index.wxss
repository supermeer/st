.recharge-result-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.recharge-result-container {
  width: 622rpx;
  background: #000;
  border-radius: 32rpx;
  padding: 80rpx 48rpx 64rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.recharge-result-icon {
  position: relative;
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 56rpx;
}

.icon-circle {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #7c5aff 0%, #a855f7 50%, #6366f1 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0 40rpx rgba(124, 90, 255, 0.5);
}

.icon-checkmark {
  width: 48rpx;
  height: 32rpx;
  border-left: 4rpx solid #fff;
  border-bottom: 4rpx solid #fff;
  transform: rotate(-45deg);
  margin-top: -12rpx;
}

.icon-loading {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.2);
  border-top-color: #fff;
  animation: spin 1s linear infinite;
}

.icon-fail {
  color: #fff;
  font-size: 40rpx;
  font-weight: 600;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.deco-dot {
  position: absolute;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #7c5aff 0%, #a78bfa 100%);
}

.dot-1 {
  top: 20rpx;
  left: 20rpx;
  width: 20rpx;
  height: 20rpx;
}

.dot-2 {
  bottom: 30rpx;
  left: 10rpx;
  width: 16rpx;
  height: 16rpx;
  opacity: 0.8;
}

.dot-3 {
  top: 30rpx;
  right: 10rpx;
  width: 28rpx;
  height: 28rpx;
}

.deco-star {
  position: absolute;
  color: #7c5aff;
  font-size: 20rpx;
}

.star-1 {
  top: 10rpx;
  right: 30rpx;
}

.star-2 {
  bottom: 20rpx;
  right: 20rpx;
}

.star-3 {
  bottom: 10rpx;
  left: 35rpx;
  font-size: 16rpx;
}

.recharge-result-text {
  color: #fff;
  font-size: 30rpx;
  line-height: 1.6;
  text-align: center;
  margin-bottom: 72rpx;
  display: flex;
  align-items: center;
}

.points-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 12rpx;
}

.recharge-result-btn {
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  background: linear-gradient(135deg, #7c5aff 0%, #a855f7 50%, #6366f1 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}
