<view class="chat-container" style="height: {{contentHeight}};">
  <t-image class="bg-image" src="/static/home/bg.png" mode="aspectFill" />
  <view class="role-info"></view>
  <scroll-view class="message-list" scroll-y="{{true}}" scroll-into-view="{{intoViewId}}" scroll-with-animation="{{true}}" show-scrollbar="{{false}}">
    <block wx:for="{{messageList}}" wx:key="index">
      <role-msg wx:if="{{item.senderType === 1}}" class="message-item" message="{{item}}" />
      <user-msg wx:if="{{item.senderType === 2}}" class="message-item" message="{{item}}" />
    </block>
    <view id="bottom-anchor" style="height: 1rpx;"></view>
  </scroll-view>
  <input-box class="input-box" bind:keyboardHeightChange="onKeyboardHeightChange" bind:inputLineChange="onInputLineChange" />
</view>