.chat-container {
  width: 100%;
  /* background: linear-gradient(345deg, #EEF2FF 4%, #CCF9FF 69%, #FFB79B 96%); */
  background: #00000069;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  /* 匀速过渡 */
  transition: height 0.2s ease-in-out;
}

.role-info-container {
  width: 100%;
  height: 100rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.role-info {
  box-sizing: border-box;
  /* width: 260rpx; */
  height: 70rpx;
  color: #fff;
  font-size: 28rpx;
  background: #00000069;
  border-radius: 35rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
}

.role-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
}

.role-msg {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 16rpx;
}

.role-name {
  font-size: 24rpx;
  font-weight: bold;
}

.role-job {
  font-size: 20rpx;
  /* 不换行，超出省略号 */
  width: 100%;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.message-list {
  flex: 1;
  height: 0; /* 配合 flex: 1 使用，确保有明确高度 */
  /* padding: 0 24rpx; */
  box-sizing: border-box;
  position: relative;
}

.plot-box {
  max-width: calc(100% - 48rpx);
  margin: 24rpx 0 24rpx 24rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 24rpx;
  padding: 24rpx 32rpx;
  color: var(--main-color-white);
  border-radius: 24rpx;
  font-size: 24rpx;
}

.plot-title {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.plot-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.message-item {
  margin-bottom: 24rpx;
}

.icon-btn {
  margin-right: 8rpx;
  color: #aaa;
}

.retry-container {
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #aaa;
  font-size: 24rpx;
}

.retry-text {
  color: var(--theme-color);
  font-size: 24rpx;
  text-decoration: underline;
  margin-left: 12rpx;
}

.input-box {
  flex: none;  /* 等同于 flex: 0 0 auto，不增长也不收缩 */
}

.loading-more-tip {
  position: absolute;
  top: -50px;
  left: 0;
  right: 0;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tip-content {
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0.8;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  transition: transform 0.3s ease;
}

.tip-icon.release {
  transform: rotate(180deg);
}

.tip-text {
  font-size: 26rpx;
  line-height: 1.5;
}

.loading-icon {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #fff;
  border-radius: 50%;
  margin-right: 12rpx;
  animation: rotate 0.8s linear infinite;
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 全局蒙版样式 */
.global-action-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 10000;
  -webkit-backdrop-filter: blur(8px);
  backdrop-filter: blur(8px);
  animation: maskFadeIn 0.25s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes maskFadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 按钮弹窗样式 */
.global-action-buttons {
  display: flex;
  gap: 16rpx;
  padding: 16rpx;
  background: rgba(40, 40, 40, 0.95);
  -webkit-backdrop-filter: blur(20px);
  backdrop-filter: blur(20px);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
  transform: scale(0.8) translateY(-10px);
  opacity: 0;
  animation: buttonPopIn 0.3s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
}

.global-action-buttons.buttons-show {
  transform: scale(1) translateY(0);
  opacity: 1;
}

@keyframes buttonPopIn {
  0% {
    transform: scale(0.8) translateY(-10px);
    opacity: 0;
  }
  100% {
    transform: scale(1) translateY(0);
    opacity: 1;
  }
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  min-width: 120rpx;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.15), rgba(255, 255, 255, 0.05));
  border-radius: 20rpx;
  color: #fff;
  font-size: 24rpx;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.action-btn:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.25), rgba(255, 255, 255, 0.1));
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.action-icon {
  width: 48rpx;
  height: 48rpx;
  transition: transform 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.action-btn:active .action-icon {
  transform: scale(1.1);
}