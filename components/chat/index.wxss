.chat-container {
  width: 100%;
  /* background: linear-gradient(345deg, #EEF2FF 4%, #CCF9FF 69%, #FFB79B 96%); */
  background: #00000069;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  /* 匀速过渡 */
  transition: height 0.2s ease-in-out;
}

.role-info-container {
  width: 100%;
  height: 100rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
}

.role-info {
  box-sizing: border-box;
  /* width: 260rpx; */
  height: 70rpx;
  color: #fff;
  font-size: 28rpx;
  background: #00000069;
  border-radius: 35rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
}

.role-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
}

.role-msg {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 16rpx;
}

.role-name {
  font-size: 24rpx;
  font-weight: bold;
}

.role-job {
  font-size: 20rpx;
}

.message-list {
  flex: 1;
  height: 0; /* 配合 flex: 1 使用，确保有明确高度 */
  /* padding: 0 24rpx; */
  box-sizing: border-box;
  position: relative;
}

.message-item {
  margin-bottom: 24rpx;
}

.input-box {
  flex: none;  /* 等同于 flex: 0 0 auto，不增长也不收缩 */
}

.loading-more-tip {
  position: absolute;
  top: -50px;
  left: 0;
  right: 0;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tip-content {
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0.8;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  transition: transform 0.3s ease;
}

.tip-icon.release {
  transform: rotate(180deg);
}

.tip-text {
  font-size: 26rpx;
  line-height: 1.5;
}

.loading-icon {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #fff;
  border-radius: 50%;
  margin-right: 12rpx;
  animation: rotate 0.8s linear infinite;
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}