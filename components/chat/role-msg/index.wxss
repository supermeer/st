.msg-container {
  width: 100%;
  padding-left: 24rpx;
  margin-bottom: 24rpx;
}

.msg-content {
  display: block;
  max-width: 80%;
  background-color: rgba(0, 0, 0, 0.6);
  -webkit-backdrop-filter: blur(4px);
  backdrop-filter: blur(4px);
  color: var(--main-color-white);
  border-radius: 24rpx;
}

.swipe-cell-btns {
  height: 100%;
  width: 100px;
  padding-left: 10px;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
  flex-wrap: wrap;
  gap: 5px;
}

.swipe-cell-item {
  width: 40px;
  height: 40px;
  border-radius: 10px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  font-size: 20rpx;
  background: #ffffff30;
  color: #fff;
  letter-spacing: 0.8rpx;
}

.img-icon {
  width: 28rpx;
  height: 28rpx;
}