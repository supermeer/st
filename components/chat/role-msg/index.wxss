.role-msg-wrapper {
  position: relative;
  width: 100%;
}

.msg-container {
  width: 100%;
  padding-left: 24rpx;
  margin-bottom: 24rpx;
  /* 高度变化过渡 - 不影响水平布局 */
  transition: margin 0.3s ease;
}

.msg-content {
  display: block;
  max-width: 80%;
  background-color: rgba(0, 0, 0, 0.3);
  -webkit-backdrop-filter: blur(4px);
  backdrop-filter: blur(4px);
  color: var(--main-color-white);
  border-radius: 24rpx;
  transition: transform 0.2s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.3s ease;
  /* 内容变化时的平滑过渡 */
  overflow: hidden;
}

.msg-container:active .msg-content {
  transform: scale(0.98);
}

/* 错误状态样式 */
.error-container {
  max-width: 80%;
  background-color: rgba(255, 77, 79, 0.1);
  border: 1px solid rgba(255, 77, 79, 0.3);
  border-radius: 24rpx;
  padding: 24rpx;
}

.error-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.error-icon {
  flex-shrink: 0;
}

.error-text {
  flex: 1;
  color: #FF4D4F;
  font-size: 28rpx;
  line-height: 1.5;
}

.error-actions {
  display: flex;
  justify-content: flex-end;
}

.retry-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  color: #fff;
  font-size: 26rpx;
  transition: all 0.3s;
}

.retry-btn:active {
  background-color: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

/* 思考过程区域样式 */
.thinking-section {
  background-color: rgba(255, 165, 0, 0.15);
  border-left: 4rpx solid #FFA500;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
  transition: background-color 0.3s ease, max-height 0.35s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 思考中状态样式 */
.thinking-active {
  background: linear-gradient(90deg, 
    rgba(255, 165, 0, 0.15) 0%, 
    rgba(255, 165, 0, 0.25) 50%, 
    rgba(255, 165, 0, 0.15) 100%
  );
  background-size: 200% 100%;
  animation: thinkingGradient 2s ease-in-out infinite;
}

@keyframes thinkingGradient {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

.thinking-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.thinking-header:active {
  background-color: rgba(255, 165, 0, 0.1);
}

.thinking-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #FFA500;
}

/* 思考时长样式 */
.thinking-duration {
  font-size: 24rpx;
  font-weight: 400;
  color: #FFA500;
  opacity: 0.8;
  margin-left: 8rpx;
}

/* 思考中图标脉冲动画 */
.thinking-icon-pulse {
  animation: iconPulse 1.5s ease-in-out infinite;
}

@keyframes iconPulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.6;
    transform: scale(1.1);
  }
}

.thinking-arrow {
  font-size: 24rpx;
  color: #FFA500;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.thinking-arrow-expanded {
  transform: rotate(180deg);
}

.thinking-content {
  padding: 0 24rpx 20rpx 24rpx;
  animation: thinkingSlideDown 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  transform-origin: top;
  /* 展开收起时的平滑过渡 */
  max-height: 2000rpx;
  transition: max-height 0.35s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.3s ease, padding 0.3s ease;
}

/* 思考内容收起状态 */
.thinking-content-collapsed {
  max-height: 0;
  padding-top: 0;
  padding-bottom: 0;
  opacity: 0;
  overflow: hidden;
}

@keyframes thinkingSlideDown {
  from {
    opacity: 0;
    transform: scaleY(0.8) translateY(-10rpx);
    max-height: 0;
  }
  to {
    opacity: 1;
    transform: scaleY(1) translateY(0);
    max-height: 2000rpx;
  }
}

.thinking-text {
  font-size: 26rpx;
  line-height: 1.6;
  color: var(--main-color-white);
  opacity: 0.85;
  white-space: pre-wrap;
}

.thinking-markdown {
  font-size: 24rpx !important;
  line-height: 1.2 !important;
  opacity: 0.85 !important;
  font-weight: normal !important;
  color: #aaa !important;
}

/* 加载容器样式 */
.loading-container {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  animation: loadingFadeIn 0.3s ease;
}

@keyframes loadingFadeIn {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.loading-icon {
  --td-loading-color: var(--main-color-white);
}

/* Markdown 内容样式 */
.markdown-body {
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--main-color-white);
  animation: contentFadeIn 0.25s ease;
}

@keyframes contentFadeIn {
  from {
    transform: translateY(6rpx);
  }
  to {
    transform: translateY(0);
  }
}

.msg-cell {
  padding: 24rpx 32rpx;
}

/* 长按触发时的轻微效果 */
@keyframes longPressHint {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(0.98);
  }
  100% {
    transform: scale(1);
  }
}