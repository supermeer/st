.btns-container {
    background: rgba(0, 0, 0, 0.6);
    height: 60rpx;
    border-radius: 30rpx;
    display: inline-flex;
    align-items: center;
    padding: 0 24rpx;
    margin-top: 12rpx;
    transition: opacity 0.3s ease;
}

/* 禁用状态样式 */
.btns-container.btns-disabled {
    opacity: 0.4;
}

.btn-image {
    width: 40rpx;
    height: 40rpx;
    margin: 0 12rpx;
}