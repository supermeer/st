view {
    letter-spacing: 0.8rpx;
}
.share-dialog {
    width: 100%;
    height: 100%;
    background: rgba(6, 6, 6, 0.6); 
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
    padding: 0 100rpx 100rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.share-dialog-content {
    width: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-bottom: 60rpx;
}

.share-dialog-top-icon {
    width: 226rpx;
    height: 226rpx;
    background-size: 100% 100%;
    background-repeat: no-repeat;
    margin-top: -68rpx;
}
.share-dialog-title {
    font-size: 40rpx;
    font-weight: bold;
    text-align: center;
    color: #333333;
    margin-top: 52rpx;
    margin-bottom: 42rpx;
}
.share-dialog-desc {
    font-size: 24rpx;
    height: 44rpx;
    color: #000;
    text-align: center;
    display: flex;
    align-items: flex-end;
    margin-bottom: 8rpx;
}
.share-dialog-desc-num {
    font-size: 32rpx;
    padding: 0 8rpx;
    font-weight: bold;
    background: linear-gradient(180deg, #75B2FF 0%, #4370FF 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
}
