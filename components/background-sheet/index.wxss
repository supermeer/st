/* 遮罩层 */
.background-sheet-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 10000;
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 弹窗容器 */
.background-sheet-container {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #000;
  border-radius: 32rpx 32rpx 0 0;
  padding: 24rpx 32rpx 48rpx;
  padding-bottom: calc(48rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  transform: translateY(100%);
  transition: transform 0.3s ease-in-out;
  z-index: 10001;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.background-sheet-container.show {
  transform: translateY(0);
}

/* 顶部指示条 */
.background-sheet-indicator {
  width: 72rpx;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 4rpx;
  margin: 0 auto 32rpx;
}

/* 标题 */
.background-sheet-title {
  color: #ffffff;
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 32rpx;
  text-align: left;
}

/* 背景列表 */
.background-list {
  flex: 1;
  margin-bottom: 32rpx;
  overflow-y: auto;
}

/* 背景网格容器 */
.background-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.empty-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-text {
  color: rgba(255, 255, 255, 0.4);
  font-size: 28rpx;
}

/* 背景项 */
.background-item {
  width: calc((100% - 32rpx) / 3);
  transition: all 0.3s;
}

/* 背景图片容器 */
.background-image-wrapper {
  position: relative;
  width: 100%;
  height: 0;
  border-radius: 16rpx;
  overflow: hidden;
  border: 3rpx solid transparent;
  transition: all 0.3s;
}

.background-item.selected .background-image-wrapper {
  border-color: #7c5aff;
  box-shadow: 0 0 20rpx rgba(124, 90, 255, 0.5);
}

/* 背景图片 */
.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: block;
}

/* 选中标记 */
.selected-mark {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #7c5aff 0%, #a78bfa 50%, #8b5cf6 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(124, 90, 255, 0.4);
}

.check-icon {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: bold;
}

/* 按钮组 */
.background-sheet-buttons {
  display: flex;
  justify-content: space-between;
  width: 100%;
  gap: 24rpx;
}

/* 按钮基础样式 */
.background-sheet-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s;
}

/* 取消按钮 */
.cancel-btn {
  background: transparent;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.6);
}

.cancel-btn:active {
  opacity: 0.7;
}

/* 确认按钮 */
.confirm-btn {
  background: linear-gradient(135deg, #7c5aff 0%, #a78bfa 50%, #8b5cf6 100%);
  color: #ffffff;
  font-weight: 600;
  box-shadow: 0 4rpx 20rpx rgba(124, 90, 255, 0.4);
}

.confirm-btn:active {
  opacity: 0.8;
}

