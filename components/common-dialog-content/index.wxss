.common-dialog-content {
    box-sizing: border-box;
    display: inline-flex !important;
    flex-direction: column;
    justify-content: center;
    width: 100%;
    background-size: 100% 100%;
    background-repeat: no-repeat;
    padding: 0 52rpx 52rpx;
    position: relative;
}
.common-dialog-bg {
    width: 100%;
    height: 100%;
    position: absolute !important;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: -1;
}
.button-container {
    display: flex;
    justify-content: space-between;
}

.button-container .btn {
    width: 200rpx;
    height: 72rpx;
    line-height: 72rpx;
    border-radius: 36rpx;
    font-size: 34rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
}

.cancel-btn {
    border: 1px solid rgba(17, 74, 255, 0.4);
    color: rgba(6, 6, 6, 0.5);
}
.confirm-btn {
    color: #fff;
    font-weight: bold;
    background: linear-gradient(112deg, #63B4FF 0%, #174DFF 44%, #6B63FF 90%);
}   