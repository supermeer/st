/* 对话框容器 */
.common-dialog-content {
    width: 622rpx;
    background: #000;
    border-radius: 32rpx;
    padding: 80rpx 48rpx 48rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    border: 1rpx solid #666;
    position: relative;
}

.common-dialog-bg {
    display: none;
}

/* 按钮组 */
.button-container {
    display: flex;
    justify-content: space-between;
    width: 100%;
    gap: 24rpx;
    margin-top: 56rpx;
}

/* 按钮基础样式 */
.button-container .btn {
    flex: 1;
    height: 88rpx;
    border-radius: 44rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    font-weight: 500;
    transition: all 0.3s;
    box-sizing: border-box;
}

/* 取消按钮 */
.cancel-btn {
    background: transparent;
    border: 2rpx solid rgba(255, 255, 255, 0.2);
    color: rgba(255, 255, 255, 0.6);
}

.cancel-btn:active {
    opacity: 0.7;
}

/* 确认按钮 */
.confirm-btn {
    background: linear-gradient(135deg, #7c5aff 0%, #a78bfa 50%, #8b5cf6 100%);
    color: #ffffff;
    font-weight: 600;
    box-shadow: 0 4rpx 20rpx rgba(124, 90, 255, 0.4);
}

.confirm-btn:active {
    opacity: 0.8;
}   