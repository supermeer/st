view {
    letter-spacing: 0.8rpx;
}
.auth-overlay {
    width: 100%;
    height: 100%;
    background: rgba(6, 6, 6, 0.6); 
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
    padding: 0 64rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.loading-icon {
  width: 20%;
  height: 20%;
  background-color: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  --td-loading-color: #fff;
  --td-loading-text-color: #fff;
  --td-loading-text-font-size: 28rpx;
}

.auth-dialog {
  display: flex;
  align-items: center;
  justify-content: center;
}

.auth-container {
  border-radius: 16rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.auth-title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-top: 40rpx;
  color: #fff;
}

.auth-subtitle {
  font-size: 34rpx;
  color: rgba(255, 255, 255, 0.8);
  /* text-align: center; */
  margin-top: 84rpx;
}
.auth-btn-container {
  display: flex;
  align-items: center;
  margin-top: 84rpx;
  width: 100%;
}
.auth-btn {
  margin-top: 64rpx;
  width: 60%;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  font-size: 34rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  /* background: linear-gradient(135deg, #7c5aff 0%, #a78bfa 50%, #8b5cf6 100%); */
  color: #fff;
}

.cancel-btn {
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  font-size: 34rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  color: #fff;
}