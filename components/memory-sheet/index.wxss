/* 遮罩层 */
.memory-sheet-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 10000;
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 弹窗容器 */
.memory-sheet-container {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #1a1a1a;
  border-radius: 32rpx 32rpx 0 0;
  padding: 40rpx 32rpx 48rpx;
  padding-bottom: calc(48rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  transform: translateY(100%);
  transition: transform 0.3s ease-in-out;
  z-index: 10001;
  max-height: 85vh;
  display: flex;
  flex-direction: column;
}

.memory-sheet-container.show {
  transform: translateY(0);
}

/* 关闭按钮 */
.memory-sheet-close {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.close-icon {
  color: rgba(255, 255, 255, 0.6);
  font-size: 48rpx;
  font-weight: 300;
  line-height: 1;
}

.memory-sheet-close:active .close-icon {
  color: rgba(255, 255, 255, 0.8);
}

/* 标题 */
.memory-sheet-title {
  color: #ffffff;
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  text-align: left;
  padding-right: 60rpx;
}

/* 副标题 */
.memory-sheet-subtitle {
  color: rgba(255, 255, 255, 0.5);
  font-size: 26rpx;
  margin-bottom: 40rpx;
  text-align: left;
  line-height: 1.5;
}

/* 记忆选项列表 */
.memory-list {
  flex: 1;
  margin-bottom: 32rpx;
  overflow-y: auto;
}

/* 记忆选项项 */
.memory-item {
  display: flex;
  align-items: flex-start;
  padding: 28rpx 24rpx;
  background: #2a2a2a;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
  transition: all 0.3s;
  border: 2rpx solid transparent;
}

.memory-item:last-child {
  margin-bottom: 0;
}

/* 选中状态默认边框 */
.memory-item.selected {
  border-color: rgba(255, 255, 255, 0.5);
}

/* 选中状态边框颜色区分 */
.memory-item.selected.selected-0 {
  border-color: rgba(255, 255, 255, 0.5);
}

.memory-item.selected.selected-1 {
  border-color: var(--theme-color);
}

.memory-item.selected.selected-2 {
  border-color: var(--theme-color-purple);
}

.memory-item.selected.selected-3 {
  border-color: var(--yellow-btn-color);
}

.memory-item:active {
  opacity: 0.8;
}

/* 左侧单选按钮 */
.memory-radio {
  /* margin-right: 20rpx;
  padding-top: 4rpx; */
}

.memory-radio-item {
  --td-radio-icon-checked-color: #fff !important;
  background: transparent !important;
  padding-right: 24rpx;
}

/* 第一项：白色 */
.memory-radio-0 {
  --td-radio-icon-checked-color: #fff !important;
}

/* 第二项：主题色 */
.memory-radio-1 {
  --td-radio-icon-checked-color: var(--theme-color) !important;
}

/* 第三项：紫色 */
.memory-radio-2 {
  --td-radio-icon-checked-color: var(--theme-color-purple) !important;
}

/* 第四项：黄色 */
.memory-radio-3 {
  --td-radio-icon-checked-color: var(--yellow-btn-color) !important;
}

/* 去掉 t-radio 的边框和间距 */
.t-radio__icon--left {
  margin-right: 0 !important;
}
.t-radio__border {
  display: none !important;
}

/* 内容区域 */
.ms-content {
  flex: 1;
  min-width: 0;
}

.ms-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.ms-name {
  font-size: 32rpx;
  font-weight: 600;
}

/* 名称颜色区分 - 第一项：白色 */
.ms-name-0 {
  color: #fff;
}

/* 名称颜色区分 - 第二项：主题色 */
.ms-name-1 {
  color: var(--theme-color);
}

/* 名称颜色区分 - 第三项：紫色 */
.ms-name-2 {
  color: var(--theme-color-purple);
}

/* 名称颜色区分 - 第四项：黄色 */
.ms-name-3 {
  color: var(--yellow-btn-color);
}

.ms-description {
  color: rgba(255, 255, 255, 0.6);
  font-size: 26rpx;
  line-height: 1.5;
  display: block;
}

.ms-metric-label {
  font-size: 26rpx;
}

/* 当前标签 - 右上角角标 */
.current-tag {
  position: absolute;
  top: -2rpx;
  right: -2rpx;
  color: #ffffff;
  font-size: 20rpx;
  padding: 8rpx 20rpx;
  border-radius: 0 20rpx 0 12rpx;
  font-weight: 500;
}

/* 当前标签颜色区分 - 第一项：白色 */
.current-tag-0 {
  background: rgba(255, 255, 255, 0.9);
  color: #1a1a1a;
}

/* 当前标签颜色区分 - 第二项：主题色 */
.current-tag-1 {
  background: var(--theme-color);
}

/* 当前标签颜色区分 - 第三项：紫色 */
.current-tag-2 {
  background: var(--theme-color-purple);
}

/* 当前标签颜色区分 - 第四项：黄色 */
.current-tag-3 {
  background: var(--yellow-btn-color);
  color: #1a1a1a;
}

/* 空状态 */
.empty-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-text {
  color: rgba(255, 255, 255, 0.4);
  font-size: 28rpx;
}

/* 按钮组 */
.memory-sheet-buttons {
  display: flex;
  justify-content: space-between;
  width: 100%;
  gap: 24rpx;
  margin-top: 16rpx;
}

/* 按钮基础样式 */
.memory-sheet-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s;
}

/* 取消按钮 */
.cancel-btn {
  background: transparent;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.6);
}

.cancel-btn:active {
  opacity: 0.7;
}

/* 确认按钮 */
.confirm-btn {
  background: linear-gradient(135deg, #7c5aff 0%, #a78bfa 50%, #8b5cf6 100%);
  color: #ffffff;
  font-weight: 600;
  box-shadow: 0 4rpx 20rpx rgba(124, 90, 255, 0.4);
}

.confirm-btn:active {
  opacity: 0.8;
}
