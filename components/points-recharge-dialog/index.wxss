view {
  letter-spacing: 0.8rpx;
}

/* 遮罩层，参照 tip-dialog 设计 */
.points-dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

/* 对话框容器：包裹积分内容区域 */
.points-dialog-container {
  width: 622rpx;
  background: #000;
  border-radius: 32rpx;
  padding: 48rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  border: 1rpx solid #666;
}

.points-dialog {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  color: #fff;
}

.points-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
}

.user-meta {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 30rpx;
  font-weight: 600;
}

.user-score {
  display: flex;
  align-items: center;
}

.user-score .points-icon {
  margin-right: 8rpx;
}

.user-score .points-text {
  font-size: 24rpx;
  color: #fff;
}

.user-info {
  margin-top: 8rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #fff;
}

.-icon {
  margin-right: 8rpx;
}

.close-icon {
  font-size: 32rpx;
  color: #9ca3af;
}

.active-tips {
  margin-top: 24rpx;
  font-size: 26rpx;
  font-weight: bold;
  padding-left: 12rpx;
  color: rgb(233, 110, 131);
  display: flex;
  align-items: center;
}

.lantern {
  width: 48rpx;
  height: 48rpx;
}

.tips-text {
  margin-top: 40rpx;
  margin-bottom: 32rpx;
  font-size: 26rpx;
}

.plan-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-row-gap: 24rpx;
  grid-column-gap: 24rpx;
}

.plan-item {
  background: #f4f4ff;
  border-radius: 24rpx;
  padding: 24rpx 16rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #111827;
}

.plan-item.active {
  background: #8b5cf6;
  color: #fff;
}

.plan-points {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.points-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.plan-points-num {
  color: var(--theme-color-purple);
}

.plan-item.active .plan-points-num {
  color: #fff;
}

.plan-price {
  font-size: 28rpx;
}

.give-away {
  padding-top: 12rpx;
  font-size: 22rpx;
  color: #f00;
  font-weight: bold;
  height: 42rpx;
}

.footer {
  margin-top: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.recharge-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  background: linear-gradient(135deg, #7c5aff 0%, #a78bfa 50%, #8b5cf6 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 20rpx rgba(124, 90, 255, 0.6);
}

.agreement {
  margin-top: 24rpx;
  font-size: 22rpx;
  color: #9ca3af;
}

.agreement-link {
  color: #e5e7eb;
}
